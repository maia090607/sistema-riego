        {
            Nombre = "Cactus del Desierto",
            HumedadOptima = 30,
            TemperaturaOptima = 25,
            LuzOptima = "Alta"
        }
    };
   

    private async Task RegistrarPlanta()
    {
        if (!string.IsNullOrEmpty(planta.Nombre))
        {
            plantasRegistradas.Add(new PlantaModel
            {
                Id = planta.Id,
                Nombre = planta.Nombre,
                Descripcion = planta.Descripcion,
                HumedadOptima = planta.HumedadOptima,
                TemperaturaOptima = planta.TemperaturaOptima,
                LuzOptima = planta.LuzOptima
            });

            planta = new PlantaModel();
            await Task.CompletedTask;
        }
    }

