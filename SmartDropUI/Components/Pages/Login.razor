@using SmartDropUI.Models
@using SmartDropUI.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="login-container">
    <!-- Decoraciones animadas -->
    <div class="login-decorations">
        <span class="droplet droplet-1">💧</span>
        <span class="droplet droplet-2">💧</span>
        <span class="droplet droplet-3">💧</span>
        <span class="leaf leaf-1">🌿</span>
        <span class="leaf leaf-2">🌱</span>
    </div>

    <!-- Tarjeta de login -->
    <div class="login-card">
        <div class="login-header">
            <div class="logo">
                <span>🌿</span>
                <span>💧</span>
                <span>🌱</span>
            </div>
            <h1 class="title">SmartDrop</h1>
            <p class="subtitle">Sistema de Riego Automático Inteligente</p>
        </div>

        <div class="login-form">
            <div class="form-group">
                <label>Usuario</label>
                <div class="input-wrapper">
                    <span class="input-icon">👤</span>
                    <input type="text"
                           @bind="loginModel.Usuario"
                           placeholder="Ingrese su usuario"
                           class="form-input" />
                </div>
            </div>

            <div class="form-group">
                <label>Contraseña</label>
                <div class="input-wrapper">
                    <span class="input-icon">🔒</span>
                    <input type="@(mostrarPassword ? "text" : "password")"
                           @bind="loginModel.Password"
                           placeholder="Ingrese su contraseña"
                           class="form-input" />
                    <button type="button"
                            class="toggle-password"
                            @onclick="() => mostrarPassword = !mostrarPassword">
                        @(mostrarPassword ? "🙈" : "👁️")
                    </button>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensajeError))
            {
                <div class="alert-error">
                    ❌ @mensajeError
                </div>
            }

            <button class="btn-primary"
                    @onclick="HandleLogin"
                    disabled="@cargando">
                <span class="btn-icon">🚀</span>
                @(cargando ? "Iniciando sesión..." : "INICIAR SESIÓN")
            </button>

            <button class="btn-secondary"
                    @onclick="IrARegistro">
                <span class="btn-icon">✨</span>
                CREAR CUENTA
            </button>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private bool mostrarPassword = false;
    private bool cargando = false;
    private string mensajeError = "";

    private async Task HandleLogin()
    {
        mensajeError = "";

        if (string.IsNullOrWhiteSpace(loginModel.Usuario) ||
            string.IsNullOrWhiteSpace(loginModel.Password))
        {
            mensajeError = "Por favor complete todos los campos";
            return;
        }

        cargando = true;
        bool success = await AuthService.LoginAsync(loginModel);
        cargando = false;

        if (success)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            mensajeError = "Usuario o contraseña incorrectos";
        }
    }

    private void IrARegistro()
    {
        Navigation.NavigateTo("/registro");
    }
}
