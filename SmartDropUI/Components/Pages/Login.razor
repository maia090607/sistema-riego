@page "/login"
@using SmartDropUI.Models
@using SmartDropUI.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Acceso - SmartDrop</PageTitle>

<style>
    .login-screen {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #05070a;
        position: relative;
        overflow: hidden;
        padding: 1rem;
    }

    .glow-blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        z-index: 0;
        animation: floatColor 8s infinite ease-in-out;
    }

    .glow-1 {
        width: 300px;
        height: 300px;
        background: #00E676;
        top: -50px;
        left: -50px;
    }

    .glow-2 {
        width: 400px;
        height: 400px;
        background: #2979FF;
        bottom: -50px;
        right: -50px;
        animation-delay: 2s;
    }

    /* Tarjeta */
    .login-box {
        position: relative;
        z-index: 10;
        background: rgba(21, 27, 43, 0.95);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 30px;
        padding: 3rem 2rem;
        width: 100%;
        max-width: 400px;
        text-align: center;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .logo-img {
        width: 70px;
        height: 70px;
        margin-bottom: 10px;
    }

    .title-text {
        font-family: 'Montserrat', sans-serif;
        font-weight: 900;
        font-size: 2rem;
        color: white;
    }

    .subtitle-text {
        color: #94A3B8;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 2rem;
    }

    .error-message {
        color: #ff4d4d;
        background: rgba(255, 77, 77, 0.1);
        padding: 10px;
        border-radius: 15px;
        margin-top: 10px;
        font-size: 0.9rem;
        border: 1px solid rgba(255, 77, 77, 0.2);
    }

    /* --- ESTILOS INPUTS Y BOTONES --- */

    .input-wrapper {
        position: relative;
        margin-bottom: 15px;
        width: 100%;
    }

    .field-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: #94A3B8;
        pointer-events: none;
        z-index: 5; /* Asegura que esté por encima del input */
    }

    /* Nuevo estilo para el botón de ver contraseña */
    .toggle-password-btn {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #94A3B8;
        cursor: pointer;
        padding: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 5;
        transition: color 0.3s;
    }

        .toggle-password-btn:hover {
            color: white;
        }

    .custom-input {
        width: 100%;
        /* Padding: Arriba, Derecha (espacio para ojo), Abajo, Izquierda (espacio para icono user/lock) */
        padding: 12px 45px 12px 50px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        outline: none;
        transition: 0.3s;
        border-radius: 50px !important;
    }

        .custom-input:focus {
            border-color: #2979FF;
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 15px rgba(41, 121, 255, 0.2);
        }

    .custom-btn {
        width: 100%;
        padding: 12px;
        font-weight: bold;
        text-transform: uppercase;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 10px;
        border-radius: 50px !important;
    }

    .btn-blue-neon {
        background-color: #2979FF;
        color: white;
        box-shadow: 0 4px 15px rgba(41, 121, 255, 0.4);
    }

        .btn-blue-neon:hover {
            background-color: #1a65ff;
            transform: translateY(-2px);
        }

    .btn-green-outline {
        background-color: transparent;
        border: 2px solid #00E676;
        color: #00E676;
    }

        .btn-green-outline:hover {
            background-color: rgba(0, 230, 118, 0.1);
            box-shadow: 0 0 15px rgba(0, 230, 118, 0.2);
        }

    .divider-line {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
        color: #64748B;
        font-size: 0.8rem;
    }

        .divider-line::before, .divider-line::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .divider-line span {
            padding: 0 10px;
        }

</style>

<div class="login-screen">

    <div class="glow-blob glow-1"></div>
    <div class="glow-blob glow-2"></div>

    <div class="login-box">

        <!-- LOGO -->
        <svg class="logo-img" viewBox="0 0 100 100" fill="none">
            <path d="M50 5C50 5 15 35 15 60C15 79.33 30.67 95 50 95C69.33 95 85 79.33 85 60C85 35 50 5 50 5Z" fill="url(#paint_l)" />
            <path d="M50 75V40M50 75C50 75 35 55 35 55M50 75C50 75 65 55 65 55" stroke="#05070a" stroke-width="5" stroke-linecap="round" />
            <circle cx="50" cy="78" r="5" fill="#05070a" />
            <defs>
                <linearGradient id="paint_l" x1="0" y1="0" x2="100" y2="100" gradientUnits="userSpaceOnUse">
                    <stop stop-color="#00E676" />
                    <stop offset="1" stop-color="#2979FF" />
                </linearGradient>
            </defs>
        </svg>

        <h1 class="title-text">SmartDrop</h1>
        <p class="subtitle-text">TECNOLOGÍA DE RIEGO</p>

        <!-- INPUT USER -->
        <div class="input-wrapper">
            <i class="fa fa-user field-icon"></i>
            <input type="text"
                   class="custom-input"
                   placeholder="Nombre de usuario"
                   @bind="loginModel.Usuario" />
        </div>

        <!-- INPUT PASSWORD CON OJO -->
        <div class="input-wrapper">
            <i class="fa fa-lock field-icon"></i>

            <!-- El tipo cambia dinámicamente entre 'text' y 'password' -->
            <input type="@(mostrarPassword ? "text" : "password")"
                   class="custom-input"
                   placeholder="Contraseña"
                   @bind="loginModel.Password" />

            <!-- Botón para mostrar/ocultar -->
            <button type="button" class="toggle-password-btn" @onclick="TogglePasswordVisibility">
                @if (mostrarPassword)
                {
                    <!-- Icono Ojo Abierto (Ver) -->
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                }
                else
                {
                    <!-- Icono Ojo Tachado (Ocultar) -->
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                        <line x1="1" y1="1" x2="23" y2="23"></line>
                    </svg>
                }
            </button>
        </div>

        <!-- BOTÓN ACCEDER -->
        <button class="custom-btn btn-blue-neon"
                @onclick="Acceder"
                disabled="@cargando">
            @(cargando ? "VERIFICANDO..." : "ACCEDER AL SISTEMA")
        </button>

        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <div class="error-message">@mensajeError</div>
        }

        <div class="divider-line"><span>o continúa con</span></div>

        <!-- BOTÓN CREAR CUENTA -->
        <button class="custom-btn btn-green-outline"
                @onclick="@(() => Navigation.NavigateTo("/registro"))">
            CREAR CUENTA NUEVA
        </button>

    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string mensajeError = "";
    private bool cargando = false;
    private bool mostrarPassword = false; // Controla si se ve la contraseña

    private void TogglePasswordVisibility()
    {
        mostrarPassword = !mostrarPassword;
    }

    private async Task Acceder()
    {
        if (string.IsNullOrWhiteSpace(loginModel.Usuario) || string.IsNullOrWhiteSpace(loginModel.Password))
        {
            mensajeError = "Por favor ingrese usuario y contraseña.";
            return;
        }

        cargando = true;
        mensajeError = "";

        try
        {
            var resultado = await AuthService.LoginAsync(loginModel.Usuario, loginModel.Password);

            if (resultado.Success)
            {
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
            else
            {
                mensajeError = resultado.Message;
            }
        }
        catch (Exception ex)
        {
            mensajeError = "Error de conexión: " + ex.Message;
        }
        finally
        {
            cargando = false;
        }
    }
}