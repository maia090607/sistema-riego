@using SmartDropUI.Models
@using SmartDropUI.Services
@inject AuthService AuthService

<div class="login-container">
    <div class="login-decorations">
        <div class="droplet droplet-1">💧</div>
        <div class="droplet droplet-2">💧</div>
        <div class="droplet droplet-3">💧</div>
        <div class="leaf leaf-1">🌿</div>
        <div class="leaf leaf-2">🍃</div>
    </div>

    <div class="login-card">
        <div class="login-header">
            <div class="logo">
                <span>🌿</span>
                <span>💧</span>
            </div>
            <h1 class="title">SmartDrop</h1>
            <p class="subtitle">Sistema de Riego Automático</p>
        </div>

        <div class="login-form">
            <div class="form-group">
                <label>Usuario</label>
                <div class="input-wrapper">
                    <span class="input-icon">👤</span>
                    <input type="text" class="form-input" placeholder="Usuario" @bind="usuario" />
                </div>
            </div>

            <div class="form-group">
                <label>Contraseña</label>
                <div class="input-wrapper">
                    <span class="input-icon">🔒</span>
                    <input type="@(mostrarPassword ? "text" : "password")" class="form-input" placeholder="Contraseña" @bind="password" />
                    <button type="button" class="toggle-password" @onclick="ToggleMostrarPassword">
                        @(mostrarPassword ? "🙈" : "👁️")
                    </button>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensajeError))
            {
                <div class="alert-error">@mensajeError</div>
            }

            <button type="button" class="btn-primary" @onclick="HandleLogin" disabled="@cargando">
                <span class="btn-icon">💧</span>
                @(cargando ? "Accediendo..." : "Acceder")
            </button>

            <button type="button" class="btn-secondary" @onclick="IrARegistro">
                <span class="btn-icon">✨</span>
                Crear Cuenta
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnLoginExitoso { get; set; }
    [Parameter] public EventCallback OnIrARegistro { get; set; }

    private string usuario = "";
    private string password = "";
    private bool mostrarPassword = false;
    private bool cargando = false;
    private string mensajeError = "";

    private void ToggleMostrarPassword() => mostrarPassword = !mostrarPassword;

    private async Task HandleLogin()
    {
        mensajeError = "";

        if (string.IsNullOrWhiteSpace(usuario) || string.IsNullOrWhiteSpace(password))
        {
            mensajeError = "Por favor complete todos los campos";
            return;
        }

        cargando = true;

        var loginModel = new LoginModel
        {
            Usuario = usuario,
            Password = password
        };

        bool loginExitoso = await AuthService.LoginAsync(loginModel);

        if (loginExitoso)
        {
            await OnLoginExitoso.InvokeAsync();
        }
        else
        {
            mensajeError = "Usuario o contraseña incorrectos";
        }

        cargando = false;
    }

    private async Task IrARegistro() => await OnIrARegistro.InvokeAsync();
}