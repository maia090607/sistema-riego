@page "/dashboard"
@using SmartDropUI.Services
@using SmartDropUI.Models
@inject ArduinoService ArduinoService
@inject ClimaService ClimaService
@inject NavigationManager Navigation
@inject HistorialRiegoService HistorialService
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Dashboard - SmartDrop</PageTitle>

<style>
    /* Dashboard mantiene el tema claro */
    .layout {
        display: flex;
        min-height: 100vh;
        background: #F3F4F6;
        color: #1F2937;
    }

    .sidebar {
        width: 260px;
        background: #111827;
        color: white;
        display: flex;
        flex-direction: column;
        position: fixed;
        height: 100vh;
        z-index: 100;
        box-shadow: 4px 0 20px rgba(0,0,0,0.1);
    }

    .sidebar-brand {
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        background: rgba(255,255,255,0.05);
    }

    .brand-text {
        font-family: 'Montserrat', sans-serif;
        font-weight: 800;
        font-size: 1.4rem;
    }

    .nav-menu {
        flex: 1;
        padding: 1.5rem 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .nav-item {
        padding: 0.9rem 1rem;
        border-radius: 10px;
        color: #9CA3AF;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.2s;
        text-decoration: none;
    }

        .nav-item:hover {
            background: rgba(255,255,255,0.1);
            color: white;
            transform: translateX(5px);
        }

        .nav-item.active {
            background: linear-gradient(90deg, #00E676 0%, #2979FF 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 230, 118, 0.3);
        }

    .sidebar-footer {
        padding: 1.5rem;
        border-top: 1px solid rgba(255,255,255,0.1);
    }

    .btn-logout {
        background: rgba(239, 68, 68, 0.1);
        color: #EF4444;
        width: 100%;
        padding: 0.8rem;
        border-radius: 10px;
        border: 1px solid rgba(239, 68, 68, 0.2);
        cursor: pointer;
        font-weight: 700;
        transition: 0.2s;
    }

        .btn-logout:hover {
            background: #EF4444;
            color: white;
        }

    .content {
        margin-left: 260px;
        flex: 1;
        padding: 2.5rem;
    }

    .header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .header h1 {
            font-size: 2rem;
            font-weight: 800;
            color: #111827;
            margin: 0;
        }

    /* Tarjetas */
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .card {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: 1px solid white;
        position: relative;
        overflow: hidden;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
        }

    .c-green::before {
        background: #00E676;
    }

    .c-blue::before {
        background: #2979FF;
    }

    .c-orange::before {
        background: #FF9100;
    }

    .c-purple::before {
        background: #651FFF;
    }

    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .bg-green {
        background: #E8F5E9;
        color: #00C853;
    }

    .bg-blue {
        background: #E3F2FD;
        color: #2962FF;
    }

    .bg-orange {
        background: #FFF3E0;
        color: #FF6D00;
    }

    .bg-purple {
        background: #EDE7F6;
        color: #6200EA;
    }

    .card-title {
        font-size: 0.9rem;
        color: #6B7280;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-val {
        font-size: 2.2rem;
        font-weight: 800;
        color: #111827;
        line-height: 1;
    }

    .text-neutral {
        color: #6B7280;
        font-weight: 600;
        font-size: 0.85rem;
        margin-top: 10px;
        display: block;
    }

    @@media (max-width: 768px) {
        .sidebar {
            display: none;
        }

        .content {
            margin-left: 0;
        }
    }
</style>

<div class="layout">
    <aside class="sidebar">
        <div class="sidebar-brand">
            <svg width="32" height="32" viewBox="0 0 100 100" fill="none"><path d="M50 5C50 5 15 35 15 60C15 79.33 30.67 95 50 95C69.33 95 85 79.33 85 60C85 35 50 5 50 5Z" fill="#00E676" /></svg>
            <span class="brand-text">SmartDrop</span>
        </div>
        <nav class="nav-menu">
            <div class="nav-item active"><span>📊</span> Dashboard</div>
            <div class="nav-item" @onclick='() => Navigation.NavigateTo("/plantas")'><span>🌿</span> Plantas</div>
            <div class="nav-item" @onclick='() => Navigation.NavigateTo("/riego")'><span>🚰</span> Riego</div>
            <div class="nav-item" @onclick='() => Navigation.NavigateTo("/graficos")'><span>📈</span> Estadísticas</div>
            <div class="nav-item" @onclick='() => Navigation.NavigateTo("/historial-riego")'><span>📋</span> Historial</div>
        </nav>
        <div class="sidebar-footer">
            <button class="btn-logout" @onclick='() => Navigation.NavigateTo("/login")'>Cerrar Sesión</button>
        </div>
    </aside>

    <main class="content">
        <div class="header">
            <div>
                <h1>Panel de Control</h1>
                <p>Bienvenido de nuevo.</p>
            </div>
        </div>

        <div class="grid">
            <div class="card c-green">
                <div class="card-top">
                    <div><div class="card-title">Humedad Suelo</div><div class="card-val">@humedadSuelo%</div></div>
                    <div class="icon-box bg-green">🌱</div>
                </div>
                <span class="text-neutral">@(humedadSuelo < 30 ? "⚠️ Requiere Riego" : "✅ Nivel Óptimo")</span>
            </div>

            <div class="card c-orange">
                <div class="card-top">
                    <div><div class="card-title">Temperatura</div><div class="card-val">@temperaturaActual°C</div></div>
                    <div class="icon-box bg-orange">🌡️</div>
                </div>
                <span class="text-neutral">Aire: @humedadAire%</span>
            </div>

            <div class="card c-blue">
                <div class="card-top">
                    <div><div class="card-title">Bomba</div><div class="card-val" style="color:@(bombaActiva ? "#00C853" : "#1F2937")">@(bombaActiva ? "ON" : "OFF")</div></div>
                    <div class="icon-box bg-blue">💧</div>
                </div>
                <span class="text-neutral">@(bombaActiva ? "Riego en curso..." : "Modo Automático")</span>
            </div>

            <div class="card c-purple">
                <div class="card-top">
                    <div><div class="card-title">Pronóstico</div><div class="card-val" style="font-size:1.6rem; text-transform:capitalize;">@pronostico</div></div>
                    <div class="icon-box bg-purple">☁️</div>
                </div>
                <span class="text-neutral">Viento: @viento</span>
            </div>
        </div>
    </main>
</div>

@code {
    private float temperaturaActual = 0;
    private int humedadAire = 0;
    private int humedadSuelo = 0;
    private bool bombaActiva = false;
    private DateTime? ultimoRiego = null;
    private string pronostico = "--";
    private string viento = "0 m/s";
    private System.Timers.Timer? actualizacionTimer;

    protected override async Task OnInitializedAsync()
    {
        ArduinoService.DatosRecibidos += OnDatosArduinoRecibidos;
        await ActualizarTodo();
        actualizacionTimer = new System.Timers.Timer(5000);
        actualizacionTimer.Elapsed += async (s, e) => await ActualizarTodo();
        actualizacionTimer.Start();
    }

    private void OnDatosArduinoRecibidos(DatosArduinoModel datos)
    {
        humedadSuelo = datos.Humedad;
        bombaActiva = datos.BombaEncendida;
        InvokeAsync(StateHasChanged);
    }

    private async Task ActualizarTodo()
    {
        try
        {
            var estado = await ArduinoService.ObtenerEstadoAsync();
            if (estado != null)
            {
                humedadSuelo = estado.Humedad;
                bombaActiva = estado.BombaEncendida;
            }
            var clima = await ClimaService.ObtenerClimaActualAsync();
            if (clima != null)
            {
                temperaturaActual = (float)clima.Temperatura;
                humedadAire = clima.Humedad;
                viento = $"{clima.VelocidadViento} m/s";
                pronostico = clima.Descripcion;
            }
            await InvokeAsync(StateHasChanged);
        }
        catch { }
    }

    public void Dispose()
    {
        ArduinoService.DatosRecibidos -= OnDatosArduinoRecibidos;
        actualizacionTimer?.Stop();
    }
}