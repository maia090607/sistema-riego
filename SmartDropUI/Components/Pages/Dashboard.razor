@page "/dashboard"
@using SmartDropUI.Models
@using SmartDropUI.Services
@inject RiegoService RiegoService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Dashboard - SmartDrop</PageTitle>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="header-left">
            <h1>SISTEMA DE RIEGO AUTOMÁTICO SMARTDROP</h1>
        </div>
        <div class="header-right">
            <button class="nav-btn logout" @onclick='() => Navigation.NavigateTo("/login")'>Salir</button>
        </div>
    </div>

    <p style="text-align: center; color: var(--gray-600); margin-bottom: 2rem; font-size: 1.1rem;">
        Panel de Control y Monitoreo en Tiempo Real
    </p>

    <div class="dashboard-grid-custom">
        <!-- Temperatura -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem;">🌡️</div>
            <h3>TEMPERATURA</h3>
            <div class="card-value" style="color: #f97316;">90.8°C</div>
        </div>

        <!-- Humedad del Aire -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem; color: var(--green-primary);">💧</div>
            <h3>HUMEDAD DEL AIRE</h3>
            <div class="card-value" style="color: var(--green-primary);">H</div>
        </div>

        <!-- Bomba de Agua -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem; color: var(--blue-primary);">⚙️</div>
            <h3>BOMBA DE AGUA</h3>
            <h4>ESTADO</h4>
            <div class="status-badge active">● Activa</div>
        </div>

        <!-- Último Riego -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem; color: var(--green-primary);">📅</div>
            <h3>ÚLTIMO RIEGO</h3>
            <h4>FECHA</h4>
            <div class="status-badge">Hoy 08:30</div>
        </div>

        <!-- Pronóstico -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem; color: #fbbf24;">☀️</div>
            <h3>PRONÓSTICO</h3>
            <div class="card-value" style="color: #f97316;">Despejado</div>
        </div>

        <!-- Viento -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem; color: var(--blue-primary);">🧭</div>
            <h3>VIENTO</h3>
            <div class="card-value" style="color: var(--blue-primary);">Norte</div>
        </div>

        <!-- Estado del Programa -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem; color: var(--green-primary);">💻</div>
            <h3>ESTADO DEL PROGRAMA</h3>
            <h4>ESTADO</h4>
            <div class="status-badge active">● Online</div>
        </div>

        <!-- Humedad del Suelo -->
        <div class="info-card">
            <div class="card-icon" style="font-size: 3rem; color: #92400e;">🌱</div>
            <h3>HUMEDAD DEL SUELO</h3>
            <div class="status-badge">Humedad</div>
        </div>
    </div>
</div>

<style>
    .dashboard-grid-custom {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        border-top: 4px solid;
        border-image: linear-gradient(90deg, var(--green-primary), var(--blue-primary)) 1;
    }

        .info-card h3 {
            font-size: 0.9rem;
            color: var(--green-primary);
            font-weight: bold;
            margin: 1rem 0 0.5rem 0;
            letter-spacing: 0.5px;
        }

        .info-card h4 {
            font-size: 0.75rem;
            color: var(--gray-600);
            margin: 0.5rem 0;
            font-weight: 600;
        }

    .card-value {
        font-size: 2rem;
        font-weight: bold;
        margin-top: 0.5rem;
    }

    .status-badge {
        display: inline-block;
        background-color: #d1fae5;
        color: #065f46;
        padding: 0.5rem 1.5rem;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-top: 0.5rem;
    }

        .status-badge.active {
            background-color: #d1fae5;
            color: #065f46;
        }

    .dashboard-header h1 {
        font-size: 1.5rem;
        color: var(--green-primary);
    }

    @@media (max-width: 768px) {
        .dashboard-grid-custom {
            grid-template-columns: 1fr;
        }
    }
</style>