@page "/usuario"
@using SmartDropUI.Services
@using SmartDropUI.Models
@inject AuthService AuthService
@inject ApiService ApiService
@inject NavigationManager Navigation
@inject ILogger<Usuarios> Logger
@rendermode InteractiveServer

<PageTitle>Mi Perfil - SmartDrop</PageTitle>

<style>
    /* --- ESTILOS GENERALES --- */
    .profile-page {
        min-height: 100vh;
        background-color: #05070a;
        padding: 2rem;
        font-family: 'Outfit', sans-serif;
        color: white;
        position: relative;
        overflow-x: hidden;
    }

    .glow-blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(90px);
        opacity: 0.3;
        z-index: 0;
        animation: floatColor 10s infinite ease-in-out;
    }

    .glow-1 {
        width: 500px;
        height: 500px;
        background: #00E676;
        top: -100px;
        right: -100px;
    }

    .glow-2 {
        width: 600px;
        height: 600px;
        background: #2979FF;
        bottom: -100px;
        left: -100px;
    }

    .btn-back-menu {
        background: rgba(255, 255, 255, 0.05);
        color: #9ca3af;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
        position: relative;
        z-index: 10;
    }

        .btn-back-menu:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border-color: white;
            transform: translateX(-5px);
        }

    /* --- SECCIÓN PERFIL --- */
    .profile-container {
        display: grid;
        grid-template-columns: 350px 1fr;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto 3rem auto;
        position: relative;
        z-index: 10;
    }

    .profile-card {
        background: #111827;
        border-radius: 24px;
        padding: 2.5rem;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .avatar-wrapper {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        border: 4px solid #1f2937;
        overflow: hidden;
        margin-bottom: 1.5rem;
        box-shadow: 0 0 25px rgba(0, 230, 118, 0.15);
        position: relative;
        background: #0f1219;
    }

    .avatar-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .user-name {
        font-size: 1.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 0.5rem;
    }

    .user-role {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 5px 12px;
        border-radius: 20px;
        display: inline-block;
        margin-bottom: 1.5rem;
    }

    .role-admin {
        background: rgba(255, 145, 0, 0.1);
        color: #FF9100;
        border: 1px solid rgba(255, 145, 0, 0.3);
    }

    .role-user {
        background: rgba(0, 230, 118, 0.1);
        color: #00E676;
        border: 1px solid rgba(0, 230, 118, 0.3);
    }

    .edit-card {
        background: #111827;
        border-radius: 24px;
        padding: 2.5rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .card-header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: white;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .full-width {
        grid-column: 1 / -1;
    }

    .form-label {
        font-size: 0.85rem;
        color: #9ca3af;
        font-weight: 600;
        margin-left: 5px;
    }

    .form-input {
        background: #1f2937;
        border: 1px solid #374151;
        color: white;
        padding: 12px 16px;
        border-radius: 12px;
        font-size: 0.95rem;
        outline: none;
        transition: 0.3s;
    }

        .form-input:disabled {
            background: transparent;
            border-color: transparent;
            padding-left: 0;
            color: #e2e8f0;
            font-weight: 600;
            cursor: default;
        }

    /* --- SECCIÓN LISTA DE USUARIOS (SOLO ADMIN) --- */
    .admin-users-section {
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 10;
    }

    .users-card {
        background: #111827;
        border-radius: 24px;
        padding: 2rem;
        border: 1px solid rgba(41, 121, 255, 0.2);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border-top: 4px solid #2979FF;
    }

    .users-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        margin-top: 1rem;
    }

        .users-table th {
            text-align: left;
            padding: 1rem;
            color: #6B7280;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.8rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .users-table td {
            padding: 1rem;
            background: rgba(255, 255, 255, 0.02);
            color: white;
            font-weight: 500;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            vertical-align: middle;
        }

            .users-table td:first-child {
                border-top-left-radius: 12px;
                border-bottom-left-radius: 12px;
                border-left: 1px solid rgba(255, 255, 255, 0.05);
                color: #2979FF;
                font-weight: 700;
            }

            .users-table td:last-child {
                border-top-right-radius: 12px;
                border-bottom-right-radius: 12px;
                border-right: 1px solid rgba(255, 255, 255, 0.05);
            }

    .mini-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #374151;
    }

    .user-cell {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    @@media (max-width: 900px) {
        .profile-container {
            grid-template-columns: 1fr;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .users-table {
            display: block;
            overflow-x: auto;
        }
    }
</style>

<div class="profile-page">
    <div class="glow-blob glow-1"></div>
    <div class="glow-blob glow-2"></div>

    <button class="btn-back-menu" @onclick='() => Navigation.NavigateTo("/dashboard")'>
        <span>⬅️</span> Volver al Dashboard
    </button>

    @if (cargando)
    {
        <div style="text-align:center; padding: 4rem; color: #2979FF;">
            <h2>🔄 Cargando perfil...</h2>
        </div>
    }
    else if (usuario != null)
    {
        <div class="profile-container">
            <div class="profile-card">
                <div class="avatar-wrapper">
                    <img src="@(string.IsNullOrEmpty(usuario.RutaImagen) ? "https://cdn-icons-png.flaticon.com/512/149/149071.png" : usuario.RutaImagen)"
                         class="avatar-img" alt="Avatar" />
                </div>

                <div class="user-name">@usuario.Nombre</div>
                <div class="user-role @(usuario.Rol == "Administrador" ? "role-admin" : "role-user")">
                    @usuario.Rol
                </div>

                <div style="display:flex; justify-content:space-around; width:100%; padding-top:1.5rem; border-top:1px solid rgba(255,255,255,0.1);">
                    <div style="text-align:center;">
                        <span style="display:block; font-size:1.2rem; font-weight:800; color:white;">@usuario.IdUsuario</span>
                        <span style="font-size:0.75rem; color:#9ca3af; text-transform:uppercase; font-weight:600;">ID Usuario</span>
                    </div>
                    <div style="text-align:center;">
                        <span style="display:block; font-size:1.2rem; font-weight:800; color:#00E676;">Activo</span>
                        <span style="font-size:0.75rem; color:#9ca3af; text-transform:uppercase; font-weight:600;">Estado</span>
                    </div>
                </div>
            </div>

            <div class="edit-card">
                <div class="card-header-row">
                    <div class="section-title">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#2979FF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                        Información Personal
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Nombre Completo</label>
                        <input type="text" class="form-input" value="@usuario.Nombre" disabled />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Nombre de Usuario</label>
                        <input type="text" class="form-input" value="@usuario.NombreUsuario" disabled />
                    </div>
                    <div class="form-group full-width">
                        <label class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-input" value="@usuario.Email" disabled />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Contraseña</label>
                        <input type="password" class="form-input" value="********" disabled />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Rol (No editable)</label>
                        <input type="text" class="form-input" value="@usuario.Rol" disabled />
                    </div>
                </div>
            </div>
        </div>

        @if (esAdministrador)
        {
            <div class="admin-users-section">
                <div class="users-card">
                    <div class="card-header-row">
                        <div class="section-title" style="color: #2979FF;">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                            Gestión de Usuarios Registrados
                        </div>
                        <span class="status-badge" style="background:rgba(41,121,255,0.1); color:#2979FF; padding:5px 12px; border-radius:20px; font-weight:700;">Total: @(listaUsuarios?.Count ?? 0)</span>
                    </div>

                    <div style="overflow-x:auto;">
                        <table class="users-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Usuario</th>
                                    <th>Nombre Completo</th>
                                    <th>Correo</th>
                                    <th>Rol</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (listaUsuarios != null && listaUsuarios.Any())
                                {
                                    @foreach (var u in listaUsuarios)
                                    {
                                        <tr>
                                            <td>#@u.IdUsuario</td>
                                            <td>
                                                <div class="user-cell">
                                                    <img src="@(string.IsNullOrEmpty(u.RutaImagen) ? "https://cdn-icons-png.flaticon.com/512/149/149071.png" : u.RutaImagen)" class="mini-avatar" />
                                                    <span style="font-weight:700;">@u.NombreUsuario</span>
                                                </div>
                                            </td>
                                            <td>@u.Nombre</td>
                                            <td style="color:#9ca3af;">@u.Email</td>
                                            <td>
                                                @if (u.Rol == "Administrador")
                                                {
                                                    <span style="color:#FF9100; font-weight:700;">Admin</span>
                                                }
                                                else
                                                {
                                                    <span style="color:#00E676;">Cuidador</span>
                                                }
                                            </td>
                                            <td>
                                                @if (u.Accedio)
                                                {
                                                    <span style="color:#00E676; font-size:0.8rem;">● Online</span>
                                                }
                                                else
                                                {
                                                    <span style="color:#6B7280; font-size:0.8rem;">○ Offline</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" style="text-align:center; padding:2rem; color:#6B7280;">No se encontraron otros usuarios.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div style="text-align:center; padding: 4rem; color: #EF4444;">
            <h2>⚠️ No se encontró información del usuario.</h2>
            <button class="btn-back-menu" style="margin-top:1rem;" @onclick='() => Navigation.NavigateTo("/login")'>Ir al Login</button>
        </div>
    }
</div>

@code {
    private Usuario? usuario;
    private List<Usuario>? listaUsuarios;
    private bool cargando = true;
    private bool esAdministrador = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        try
        {
            // 1. Cargar mi perfil
            usuario = await AuthService.GetUsuarioActualAsync();

            if (usuario != null)
            {
                // 2. Verificar si soy Admin
                esAdministrador = usuario.Rol.Equals("Administrador", StringComparison.OrdinalIgnoreCase);

                // 3. Si soy Admin, cargar la lista completa de usuarios
                if (esAdministrador)
                {
                    listaUsuarios = await ApiService.ObtenerUsuariosAsync();
                }
            }
        }
        catch (Exception ex)
        {
            Logger.LogError($"Error cargando datos: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }
}