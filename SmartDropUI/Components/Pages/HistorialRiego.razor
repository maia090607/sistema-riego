</style>

<div class="historial-page">
    <div class="container">
        <button class="btn-back" @onclick='() => Navigation.NavigateTo("/riego")'>
            <span>⬅️</span>
            Atrás
        </button>

        <div class="page-header">
            <h1 class="page-title">SISTEMA DE RIEGO AUTOMÁTICO SMARTDROP</h1>
            <p class="page-subtitle">Panel de Control y Monitoreo Avanzado</p>
        </div>

        <div class="tabs-container">
            <button class="tab-button @(pestanaActiva == "riegos" ? "active" : "")"
                    @onclick='() => pestanaActiva = "riegos"'>
                <span>💧</span>
                Historial de Riegos
            </button>
            <button class="tab-button @(pestanaActiva == "alertas" ? "active" : "")"
                    @onclick='() => pestanaActiva = "alertas"'>
                <span>⚠️</span>
                Historial de Alertas
            </button>
        </div>

        @if (pestanaActiva == "riegos")
        {
            <!-- Historial de Riegos ARRIBA -->
            <div class="section-card">
                <div class="section-header">
                    <h2>HISTORIAL DE RIEGOS EN LAS PLANTAS</h2>
                </div>
                <div class="section-body">
                    @if (cargandoRiegos)
                    {
                        <div class="loading-container">
                            <div class="loading-spinner"></div>
                            <div class="loading-text">Cargando historial...</div>
                        </div>
                    }
                    else if (mostrarResultadosRiegos && historialRiegos.Any())
                    {
                        <table class="history-table">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Horario</th>
                                    <th>Humedad (%)</th>
                                    <th>Temperatura (°C)</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var riego in historialRiegos)
                                {
                                    <tr>
                                        <td>@riego.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td>@riego.Fecha.ToString("HH:mm:ss")</td>
                                        <td>
                                            <span class="status-badge @ObtenerClaseHumedad(riego.Humedad)">
                                                @riego.Humedad.ToString("F1")%
                                            </span>
                                        </td>
                                        <td>
                                            <span class="status-badge @ObtenerClaseTemperatura(riego.Temperatura)">
                                                @riego.Temperatura.ToString("F1")°C
                                            </span>
                                        </td>
                                        <td>
                                            <span class="status-badge badge-success">Completado</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">💧</div>
                            <h3 class="empty-title">Historial de Riegos</h3>
                            <p class="empty-description">
                                Los registros de riego de las plantas aparecerán aquí<br />
                                Datos de fechas, horarios y duración de cada riego
                            </p>
                        </div>
                    }
                </div>
            </div>

            <!-- Controles ABAJO -->
            <div class="controls-section">
                <h3 class="controls-title">Controles del Sistema</h3>

                <div class="search-section">
                    <label class="search-label">Buscar Historial</label>
                    <input type="date"
                           class="date-input"
                           @bind="fechaRiegos" />
                </div>

                <div class="button-group">
                    <button class="btn btn-search" @onclick="BuscarRiegos">
                        <span>🔍</span>
                        Buscar
                    </button>
                    <button class="btn btn-clear" @onclick="LimpiarBusquedaRiegos">
                        <span>🗑️</span>
                        Limpiar
                    </button>
                </div>

                <div style="margin-top: 1.5rem;">
                    <button class="btn btn-reload" @onclick="RecargarRiegos">
                        <span>🔄</span>
                        Recargar
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- Historial de Alertas ARRIBA -->
            <div class="section-card">
                <div class="section-header">
                    <h2>HISTORIAL DE ALERTAS DEL PROGRAMA</h2>
                </div>
                <div class="section-body">
                    @if (cargandoAlertas)
                    {
                        <div class="loading-container">
                            <div class="loading-spinner"></div>
                            <div class="loading-text">Cargando alertas...</div>
                        </div>
                    }
                    else if (mostrarResultadosAlertas && historialAlertas.Any())
                    {
                        <div>
                            @foreach (var alerta in historialAlertas)
                            {
                                <div class="alert-card">
                                    <div class="alert-header">
                                        <span class="alert-icon">⚠️</span>
                                        <span class="alert-title">@alerta.Titulo</span>
                                    </div>
                                    <p class="alert-description">@alerta.Descripcion</p>
                                    <div class="alert-date">
                                        @alerta.Fecha.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">⚠️</div>
                            <h3 class="empty-title">Historial de Alertas</h3>
                            <p class="empty-description">
                                Las alertas y notificaciones del sistema aparecerán aquí<br />
                                Alertas de mantenimiento, errores y estados del sistema
                            </p>
                        </div>
                    }
                </div>
            </div>

            <!-- Controles ABAJO -->
            <div class="controls-section">
                <h3 class="controls-title">Controles del Sistema</h3>

                <button class="btn btn-reload" @onclick="RecargarAlertas">
                    <span>🔄</span>
                    Recargar
                </button>

                <div class="search-section" style="margin-top: 2rem;">
                    <label class="search-label">Buscar Alertas</label>
                    <input type="date"
                           class="date-input"
                           @bind="fechaAlertas" />
                </div>

                <button class="btn btn-search" @onclick="BuscarAlertas">
                    <span>🔍</span>
                    Buscar
                </button>
            </div>
        }
    </div>
</div>

@code {
    private string pestanaActiva = "riegos";
    private DateTime fechaRiegos = DateTime.Now;
    private DateTime fechaAlertas = DateTime.Now;
    private bool mostrarResultadosRiegos = false;
    private bool mostrarResultadosAlertas = false;
    private bool cargandoRiegos = false;
    private bool cargandoAlertas = false;

    private List<HistorialRiegoModel> historialRiegos = new();
    private List<AlertaHistorial> historialAlertas = new();
    private System.Timers.Timer? actualizacionTimer;

    public class AlertaHistorial
    {
        public DateTime Fecha { get; set; }
        public string Titulo { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public string Tipo { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarDatosIniciales();

        // Timer para actualizar cada 5 segundos
        actualizacionTimer = new System.Timers.Timer(5000);
        actualizacionTimer.Elapsed += async (sender, e) => await ActualizarDatosAutomaticamente();
        actualizacionTimer.AutoReset = true;
        actualizacionTimer.Start();
    }

    private async Task CargarDatosIniciales()
    {
        cargandoRiegos = true;

        try
        {
            var historial = await HistorialService.ObtenerHistorialAsync();

            if (historial != null && historial.Any())
            {
                historialRiegos = historial.OrderByDescending(h => h.Fecha).Take(20).ToList();
                mostrarResultadosRiegos = true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [HISTORIAL] Error: {ex.Message}");
        }
        finally
        {
            cargandoRiegos = false;
        }
    }

    private async Task ActualizarDatosAutomaticamente()
    {
        if (mostrarResultadosRiegos && pestanaActiva == "riegos")
        {
            await CargarDatosIniciales();
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task BuscarRiegos()
    {
        cargandoRiegos = true;
        mostrarResultadosRiegos = false;

        try
        {
            var resultados = await HistorialService.ObtenerPorFechaAsync(fechaRiegos);

            if (resultados != null && resultados.Any())
            {
                historialRiegos = resultados.OrderByDescending(h => h.Fecha).ToList();
                mostrarResultadosRiegos = true;
            }
            else
            {
                historialRiegos = new List<HistorialRiegoModel>();
                mostrarResultadosRiegos = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [HISTORIAL] Error en búsqueda: {ex.Message}");
        }
        finally
        {
            cargandoRiegos = false;
        }
    }

    private void LimpiarBusquedaRiegos()
    {
        historialRiegos.Clear();
        mostrarResultadosRiegos = false;
        fechaRiegos = DateTime.Now;
    }

    private async Task RecargarRiegos()
    {
        await CargarDatosIniciales();
    }

    private async Task BuscarAlertas()
    {
        cargandoAlertas = true;

        await Task.Delay(500);

        historialAlertas = new List<AlertaHistorial>
        {
            new()
            {
                Fecha = fechaAlertas,
                Titulo = "Nivel de agua bajo",
                Descripcion = "El nivel del tanque de agua está por debajo del 20%. Se recomienda rellenar pronto.",
                Tipo = "Advertencia"
            },
            new()
            {
                Fecha = fechaAlertas.AddHours(-5),
                Titulo = "Mantenimiento programado",
                Descripcion = "Recordatorio: Se debe realizar mantenimiento al sistema de filtros.",
                Tipo = "Información"
            },
        };

        mostrarResultadosAlertas = true;
        cargandoAlertas = false;
    }

    private async Task RecargarAlertas()
    {
        cargandoAlertas = true;
        historialAlertas.Clear();
        mostrarResultadosAlertas = false;
        await Task.Delay(300);
        cargandoAlertas = false;
    }

    private string ObtenerClaseHumedad(float humedad)
    {
        if (humedad < 30) return "badge-danger";
        if (humedad < 60) return "badge-warning";
        return "badge-success";
    }

    private string ObtenerClaseTemperatura(float temperatura)
    {
        if (temperatura < 15 || temperatura > 35) return "badge-danger";
        if (temperatura < 18 || temperatura > 30) return "badge-warning";
        return "badge-success";
    }

    public void Dispose()
    {
        actualizacionTimer?.Stop();
        actualizacionTimer?.Dispose();
    }
}