                <div class="card-status-badge @(bombaActiva ? "badge-active" : "badge-inactive")">
                    @(bombaActiva ? "ACTIVA" : "INACTIVA")
                </div>
                <p style="margin-top: 1rem; color: #6b7280; font-size: 0.9rem;">
                    @(bombaActiva ? "Sistema de bombeo activo" : "Sistema de bombeo detenido")
                </p>
            </div>

            <div class="info-card">
                <div class="card-icon">💻</div>
                <div class="card-title">ESTADO DEL PROGRAMA</div>
                <div class="card-value">Activo</div>
                <div class="card-status-badge badge-online">ONLINE</div>
                <p style="margin-top: 1rem; color: #6b7280; font-size: 0.9rem;">
                    Sistema funcionando correctamente
                </p>
            </div>
        </div>

        <!-- Manual Control -->
        <div>
            @if (riegoManualActivo)
            {
                <button class="btn-riego detener"
                        @onclick="DetenerRiegoManual"
                        disabled="@esperandoRespuesta">
                    🛑 DETENER RIEGO MANUAL
                </button>
            }
            else
            {
                <button class="btn-riego iniciar"
                        @onclick="IniciarRiegoManual"
                        disabled="@esperandoRespuesta">
                    💧 INICIAR RIEGO MANUAL
                </button>
            }
        </div>

    </main>
</div>

@code {
    private bool riegoManualActivo = false;
    private bool esperandoRespuesta = false;
    private bool bombaActiva = false;
    private int tiempoRiego = 0;
    private Timer? timer;
    private int humedadActual = 0;
    private float temperaturaActual = 25.0f;
    private bool temperaturaObtenida = false;
    private bool bombaAnteriorEncendida = false;
    private Timer? actualizacionTimer;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("🎯 [RIEGO] Iniciando componente...");
        ArduinoService.DatosRecibidos += OnDatosArduinoRecibidos;
        await ActualizarEstadoAsync();
        await ObtenerTemperaturaActualAsync();

        // ✅ Timer para actualizar estado cada 2 segundos
        actualizacionTimer = new Timer(2000);
        actualizacionTimer.Elapsed += async (s, e) => await ActualizarEstadoAsync();
        actualizacionTimer.AutoReset = true;
        actualizacionTimer.Start();
    }

    private async Task ObtenerTemperaturaActualAsync()
    {
        try
        {
            var clima = await ClimaService.ObtenerClimaActualAsync();
            if (clima != null)
            {
                temperaturaActual = (float)clima.Temperatura;
                temperaturaObtenida = true;
                Console.WriteLine($"🌡️ [RIEGO] Temperatura: {temperaturaActual}°C");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [RIEGO] Error temperatura: {ex.Message}");
        }
    }

    private void OnDatosArduinoRecibidos(DatosArduinoModel datos)
    {
        Console.WriteLine($"📡 [RIEGO] Datos Arduino - Bomba:{datos.BombaEncendida} Manual:{datos.ModoManual}");

        bool bombaAntesEncendida = bombaActiva;
        bombaActiva = datos.BombaEncendida;
        humedadActual = datos.Humedad;

        // ✅ DETECTAR RIEGO AUTOMÁTICO (bomba se encendió sin modo manual)
        if (bombaActiva && !bombaAntesEncendida && !riegoManualActivo)
        {
            Console.WriteLine("🌊 [RIEGO] Riego AUTOMÁTICO detectado");
            _ = RegistrarRiegoEnHistorialAsync();
        }

        InvokeAsync(StateHasChanged);
    }

    private async Task ActualizarEstadoAsync()
    {
        if (!ArduinoService.EstaConectado)
        {
            Console.WriteLine("⚠️ [RIEGO] Arduino no conectado");
            return;
        }

        try
        {
            var estado = await ArduinoService.ObtenerEstadoAsync();
            if (estado != null)
            {
                bool bombaAntesEncendida = bombaActiva;
                bombaActiva = estado.BombaEncendida;
                humedadActual = estado.Humedad;

                // ✅ DETECTAR RIEGO AUTOMÁTICO
                if (bombaActiva && !bombaAntesEncendida && !riegoManualActivo)
                {
                    Console.WriteLine("🌊 [RIEGO] Riego AUTOMÁTICO detectado en actualización");
                    await RegistrarRiegoEnHistorialAsync();
                }

                await InvokeAsync(StateHasChanged);
            }

            if (!temperaturaObtenida)
            {
                await ObtenerTemperaturaActualAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [RIEGO] Error: {ex.Message}");
        }
    }

    private async Task RegistrarRiegoEnHistorialAsync()
    {
        try
        {
            if (!temperaturaObtenida)
            {
                await ObtenerTemperaturaActualAsync();
            }

            Console.WriteLine($"💾 [RIEGO] Registrando - H:{humedadActual}% T:{temperaturaActual}°C");

            var nuevoRiego = new HistorialRiegoModel
            {
                Fecha = DateTime.Now,
                Humedad = humedadActual,
                Temperatura = temperaturaActual
            };

            bool guardado = await HistorialService.GuardarRiegoAsync(nuevoRiego);

            if (guardado)
            {
                Console.WriteLine("✅ [RIEGO] Riego registrado exitosamente");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [RIEGO] Error al registrar: {ex.Message}");
        }
    }

    private async Task IniciarRiegoManual()
    {
        Console.WriteLine("🚀 [RIEGO] ========== INICIANDO RIEGO MANUAL ==========");
        esperandoRespuesta = true;
        StateHasChanged(); // ✅ Actualizar UI inmediatamente

        try
        {
            // ✅ Obtener temperatura ANTES de iniciar el riego
            await ObtenerTemperaturaActualAsync();

            // ✅ Actualizar datos del Arduino
            await ActualizarEstadoAsync();

            Console.WriteLine("📤 [RIEGO] Enviando comando MANUAL_ON al Arduino...");
            bool exito = await ArduinoService.IniciarRiegoManualAsync();

            Console.WriteLine($"📥 [RIEGO] Respuesta del Arduino: {(exito ? "ÉXITO ✅" : "FALLO ❌")}");

            if (exito)
            {
                Console.WriteLine("✅ [RIEGO] Comando MANUAL_ON enviado exitosamente");

                // ✅ CAMBIO CRÍTICO: Actualizar estado ANTES de registrar
                riegoManualActivo = true;
                tiempoRiego = 0;
                bombaActiva = true; // ✅ Forzar estado de bomba

                // ✅ FORZAR ACTUALIZACIÓN DE UI
                await InvokeAsync(StateHasChanged);

                // ✅ REGISTRAR EL INICIO DEL RIEGO EN EL HISTORIAL
                await RegistrarRiegoEnHistorialAsync();

                // Iniciar temporizador
                timer = new Timer(1000);
                timer.Elapsed += async (s, e) =>
                {
                    tiempoRiego++;

                    // ✅ Actualizar temperatura cada 30 segundos
                    if (tiempoRiego % 30 == 0)
                    {
                        await ObtenerTemperaturaActualAsync();
                    }

                    await InvokeAsync(StateHasChanged);
                };
                timer.Start();
                Console.WriteLine("⏱️ [RIEGO] Temporizador de riego iniciado");

                Console.WriteLine("✅ [RIEGO] Riego manual activo - Esperando que el usuario presione detener");
            }
            else
            {
                Console.WriteLine("❌ [RIEGO] Error al enviar comando MANUAL_ON");
                riegoManualActivo = false;
                bombaActiva = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [RIEGO] Excepción al iniciar riego manual: {ex.Message}");
            riegoManualActivo = false;
            bombaActiva = false;
        }
        finally
        {
            esperandoRespuesta = false;
            await InvokeAsync(StateHasChanged); // ✅ Asegurar actualización final
            Console.WriteLine("🏁 [RIEGO] ========== FIN INICIAR RIEGO MANUAL ==========");
        }
    }
    private async Task DetenerRiegoManual()
    {
        Console.WriteLine("🛑 [RIEGO] ========== DETENIENDO ==========");
        esperandoRespuesta = true;
        StateHasChanged();

        try
        {
            if (timer != null)
            {
                timer.Stop();
                timer.Dispose();
                timer = null;
            }

            Console.WriteLine("📤 [RIEGO] Enviando MANUAL_OFF...");
            bool exito = await ArduinoService.DetenerRiegoManualAsync();

            if (exito)
            {
                Console.WriteLine("✅ [RIEGO] MANUAL_OFF enviado");
                await Task.Delay(500);

                bool exitoAuto = await ArduinoService.ActivarModoAutomaticoAsync();
                Console.WriteLine($"📥 [RIEGO] AUTO: {(exitoAuto ? "✅" : "❌")}");

                riegoManualActivo = false;
                tiempoRiego = 0;
                bombaActiva = false;
                temperaturaObtenida = false;

                Console.WriteLine("✅ [RIEGO] Sistema vuelto a modo automático");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [RIEGO] Excepción: {ex.Message}");
        }
        finally
        {
            esperandoRespuesta = false;
            await InvokeAsync(StateHasChanged);
            Console.WriteLine("🏁 [RIEGO] ========== FIN ==========");
        }
    }

    public void Dispose()
    {
        Console.WriteLine("🧹 [RIEGO] Limpiando recursos...");
        if (timer != null)
        {
            timer.Stop();
            timer.Dispose();
        }
        if (actualizacionTimer != null)
        {
            actualizacionTimer.Stop();
            actualizacionTimer.Dispose();
        }
        ArduinoService.DatosRecibidos -= OnDatosArduinoRecibidos;
        Console.WriteLine("✅ [RIEGO] Recursos liberados");
    }
}