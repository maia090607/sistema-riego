@code {
    private bool riegoManualActivo = false;
    private bool esperandoRespuesta = false;
    private bool bombaActiva = false;
    private int tiempoRiego = 0;
    private System.Timers.Timer? timer;
    private System.Timers.Timer? pollingTimer;

    private int _idPlantaValido = 0;
    private float humedad_real = 0;
    private DateTime _horaUltimoComando = DateTime.MinValue;

    private bool esAdministrador = false;
    private bool esCuidador = false;
    private List<PlantaModel> plantasDisponibles = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarDatosIniciales();
        pollingTimer = new System.Timers.Timer(2000);
        pollingTimer.Elapsed += async (s, e) => await ConsultarEstadoServidor();
        pollingTimer.AutoReset = true;
        pollingTimer.Start();
    }

    private async Task CargarDatosIniciales()
    {
        try
        {
            var usuario = await AuthService.GetUsuarioActualAsync();
            if (usuario != null)
            {
                esAdministrador = usuario.Rol.Equals("Administrador", StringComparison.OrdinalIgnoreCase);
                esCuidador = usuario.Rol.Equals("Cuidador", StringComparison.OrdinalIgnoreCase);

                if (esAdministrador)
                {
                    var lista = await ApiService.ObtenerPlantasAsync();
                    plantasDisponibles = lista ?? new List<PlantaModel>();
                }
                else
                {
                    var lista = await ApiService.ObtenerPlantasPorUsuarioAsync(usuario.IdUsuario);
                    plantasDisponibles = lista ?? new List<PlantaModel>();
                }

                // ✅ CORRECCIÓN: Seleccionar la primera planta automáticamente si existe
                if (plantasDisponibles.Any())
                {
                    _idPlantaValido = plantasDisponibles.First().IdPlanta;
                }
            }
        }
        catch { }
    }

    private void CambiarPlantaSeleccionada(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int nuevoId))
        {
            _idPlantaValido = nuevoId;
        }
    }

    private async Task ConsultarEstadoServidor()
    {
        if ((DateTime.Now - _horaUltimoComando).TotalSeconds < 4) return;

        try
        {
            var datos = await ArduinoService.ObtenerEstadoAsync();
            if (datos != null)
            {
                await InvokeAsync(() =>
                {
                    bombaActiva = datos.BombaEncendida;
                    if (datos.Humedad > 0) humedad_real = datos.Humedad;

                    if (datos.ModoManual && !riegoManualActivo)
                    {
                        riegoManualActivo = true;
                        EstadoGlobal.UsuarioEstaRegando = true;
                        IniciarTimerVisual();
                    }
                    else if (!datos.ModoManual && riegoManualActivo)
                    {
                        riegoManualActivo = false;
                        EstadoGlobal.UsuarioEstaRegando = false;
                        DetenerTimerVisual();
                    }
                    StateHasChanged();
                });
            }
        }
        catch { }
    }

    private async Task IniciarRiegoManual()
    {
        if (_idPlantaValido == 0)
        {
            await JS.InvokeVoidAsync("alert", "⚠️ Error: Selecciona una planta válida para regar.");
            return;
        }

        EstadoGlobal.UsuarioEstaRegando = true;
        _horaUltimoComando = DateTime.Now;

        esperandoRespuesta = true;
        riegoManualActivo = true;
        bombaActiva = true;
        IniciarTimerVisual();
        StateHasChanged();

        try
        {
            var datosSensor = await ArduinoService.ObtenerEstadoAsync();
            if (datosSensor != null && datosSensor.Humedad > 0) humedad_real = datosSensor.Humedad;
        }
        catch { }

        bool exitoArduino = await ArduinoService.IniciarRiegoManualAsync();

        float temp = 25.0f;
        float humAire = 50.0f;
        float viento = 0.0f;
        try
        {
            var clima = await _climaService.ObtenerClimaActualAsync();
            if (clima != null)
            {
                temp = (float)clima.Temperatura;
                humAire = (float)clima.Humedad;
                viento = (float)clima.VelocidadViento;
            }
        }
        catch { }

        try
        {
            // ✅ ENVÍO EXPLÍCITO DEL TIPO "Manual"
            var nuevoRiego = new HistorialRiegoModel
            {
                Fecha = DateTime.Now,
                Humedad = humedad_real,
                Temperatura = temp,
                IdPlanta = _idPlantaValido,
                TipoRiego = "Manual"
            };

            // El servicio ahora sí enviará este dato porque actualizamos el HistorialRiegoService.cs
            await HistorialService.GuardarRiegoAsync(nuevoRiego);

            await ApiService.GuardarTemperaturaAsync(temp, temp, "Riego Manual", _idPlantaValido);
            await ApiService.GuardarRegistroClimaticoAsync(humedad_real, humAire, temp, viento, _idPlantaValido);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error guardando: {ex.Message}");
        }

        esperandoRespuesta = false;
    }

    private async Task DetenerRiegoManual()
    {
        _horaUltimoComando = DateTime.Now;
        esperandoRespuesta = true;

        riegoManualActivo = false;
        bombaActiva = false;
        DetenerTimerVisual();
        StateHasChanged();

        bool exito = await ArduinoService.DetenerRiegoManualAsync();

        if (exito)
        {
            await ArduinoService.ActivarModoAutomaticoAsync();
        }

        EstadoGlobal.UsuarioEstaRegando = false;
        esperandoRespuesta = false;
    }

    private void IniciarTimerVisual()
    {
        if (timer == null)
        {
            tiempoRiego = 0;
            timer = new System.Timers.Timer(1000);
            timer.Elapsed += (s, e) =>
            {
                tiempoRiego++;
                InvokeAsync(StateHasChanged);
            };
            timer.Start();
        }
    }

    private void DetenerTimerVisual()
    {
        if (timer != null)
        {
            timer.Stop();
            timer.Dispose();
            timer = null;
        }
        tiempoRiego = 0;
    }

    public void Dispose()
    {
        DetenerTimerVisual();
        pollingTimer?.Stop();
        pollingTimer?.Dispose();
    }
