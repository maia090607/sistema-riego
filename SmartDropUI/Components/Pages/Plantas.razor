@page "/plantas"
@using SmartDropUI.Services
@using SmartDropUI.Models
@inject ApiService ApiService
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<Plantas> Logger
@rendermode InteractiveServer

<PageTitle>Plantas - SmartDrop</PageTitle>

<style>
    /* --- FONDO Y AMBIENTE --- */
    .plantas-page {
        min-height: 100vh;
        background-color: #05070a; /* Fondo oscuro */
        position: relative;
        overflow: hidden;
        padding: 2rem;
        font-family: 'Outfit', sans-serif;
        color: white;
    }

    /* Efectos de luz de fondo */
    .glow-blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(90px);
        opacity: 0.3;
        z-index: 0;
        animation: floatColor 10s infinite ease-in-out;
    }

    .glow-1 {
        width: 500px;
        height: 500px;
        background: #00E676;
        top: -150px;
        left: -150px;
    }

    .glow-2 {
        width: 600px;
        height: 600px;
        background: #2979FF;
        bottom: -150px;
        right: -150px;
    }

    /* Botón Volver */
    .btn-back-menu {
        background: rgba(255, 255, 255, 0.05);
        color: #9ca3af;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
        position: relative;
        z-index: 10;
    }

        .btn-back-menu:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border-color: white;
            transform: translateX(-5px);
        }

    /* Layout Principal */
    .content-grid {
        display: grid;
        grid-template-columns: 350px 1fr;
        gap: 2rem;
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        z-index: 10;
    }

    /* --- LISTA DE PLANTAS (Sidebar Izquierda) --- */
    .plant-list-section {
        background: #111827;
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        height: fit-content;
        max-height: 80vh;
        display: flex;
        flex-direction: column;
    }

    .list-title {
        font-size: 1.2rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1.5rem;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 1rem;
    }

    .plant-item {
        padding: 1rem;
        border-radius: 15px;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: 0.5rem;
        background: transparent;
        border: 1px solid transparent;
    }

        .plant-item:hover {
            background: rgba(255, 255, 255, 0.03);
        }

        .plant-item.active {
            background: rgba(0, 230, 118, 0.1);
            border-color: #00E676;
            box-shadow: 0 0 15px rgba(0, 230, 118, 0.1);
        }

    .plant-name {
        font-weight: 700;
        color: white;
        font-size: 1.1rem;
    }

    .plant-item.active .plant-name {
        color: #00E676;
    }

    .plant-id {
        font-size: 0.8rem;
        color: #9ca3af;
    }

    /* --- BOTÓN AGREGAR (CAMBIADO) --- */
    .btn-add-plant {
        background: linear-gradient(90deg, #00E676 0%, #00C853 100%);
        color: #003d1c;
        border: none;
        padding: 1rem;
        width: 100%;
        border-radius: 50px;
        font-weight: 800;
        text-transform: uppercase;
        margin-top: 1.5rem;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0, 230, 118, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-add-plant:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 230, 118, 0.5);
            filter: brightness(1.1);
        }

    /* --- DETALLE --- */
    .plant-detail-section {
        background: #111827;
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
    }

    .detail-header {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
    }

    .detail-title {
        font-size: 2.5rem;
        font-weight: 900;
        color: white;
        margin-bottom: 0.5rem;
    }

    .detail-desc {
        color: #9ca3af;
        font-size: 1rem;
        line-height: 1.5;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .info-card {
        background: rgba(255, 255, 255, 0.03);
        padding: 1.5rem;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .info-label {
        font-size: 0.8rem;
        color: #9ca3af;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
    }

    .info-value {
        font-size: 1.8rem;
        font-weight: 800;
        color: white;
    }

    .val-hum {
        color: #2979FF;
    }

    .val-temp {
        color: #FF9100;
    }

    .val-light {
        color: #FFEA00;
    }

    .val-id {
        color: #E0E0E0;
    }

    .loading-container, .empty-state {
        text-align: center;
        padding: 4rem;
        color: #9ca3af;
    }

    @@media (max-width: 900px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="plantas-page">
    <div class="glow-blob glow-1"></div>
    <div class="glow-blob glow-2"></div>

    <button class="btn-back-menu" @onclick="VolverAlDashboard">
        <span>⬅️</span> Volver al Dashboard
    </button>

    @if (cargando)
    {
        <div class="loading-container"><h2>🔄 Cargando plantas...</h2></div>
    }
    else if (plantas != null && plantas.Any())
    {
        <div class="content-grid">
            <!-- LISTA -->
            <div class="plant-list-section">
                <div class="list-title">
                    @(esAdministrador ? "🌍 Todas las Plantas" : "🌱 Mis Plantas")
                    <span style="font-size: 0.8em; color: #00E676;">(@plantas.Count)</span>
                </div>

                <div style="overflow-y: auto; flex:1; padding-right: 5px;">
                    @foreach (var planta in plantas)
                    {
                        <div class="plant-item @(planta.IdPlanta == plantaActual.IdPlanta ? "active" : "")"
                             @onclick="() => SeleccionarPlanta(planta)">
                            <div class="plant-name">@planta.NombrePlanta</div>
                            @if (!esAdministrador)
                            {
                                <div class="plant-id">ID: @planta.IdPlanta</div>
                            }
                        </div>
                    }
                </div>

                <!-- ✅ BOTÓN ACTUALIZADO -->
                <button class="btn-add-plant" @onclick="IrAGestion">
                    <span>➕</span> Agregar Nueva Planta
                </button>
            </div>

            <!-- DETALLES -->
            <div class="plant-detail-section">
                <div class="detail-header">
                    <h1 class="detail-title">@plantaActual.NombrePlanta</h1>
                    <p class="detail-desc">@plantaActual.Descripcion</p>
                </div>

                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-label">Humedad Óptima</div>
                        <div class="info-value val-hum">@plantaActual.NivelOptimoHumedad %</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Temperatura Óptima</div>
                        <div class="info-value val-temp">@plantaActual.NivelOptimoTemperatura °C</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Luz Necesaria</div>
                        <div class="info-value val-light">@plantaActual.NivelOptimoLuz</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">ID Sistema</div>
                        <div class="info-value val-id">#@plantaActual.IdPlanta</div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(plantaActual.RutaImagen))
                {
                    <div style="margin-top: 2rem; text-align: center;">
                        <img src="@plantaActual.RutaImagen" style="max-width: 100%; border-radius: 16px; max-height: 300px; border: 2px solid rgba(255,255,255,0.1);" />
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <h1 style="font-size: 3rem;">🥀</h1>
            <h2>No hay plantas registradas</h2>
            <button class="btn-add-plant" style="max-width: 300px; margin-top: 2rem;" @onclick="IrAGestion">
                Agregar Primera Planta
            </button>
        </div>
    }
</div>

@code {
    private List<PlantaModel> plantas = new();
    private PlantaModel plantaActual = new();
    private bool cargando = true;
    private bool esAdministrador = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarPlantas();
    }

    private async Task CargarPlantas()
    {
        cargando = true;
        try
        {
            var usuarioLogueado = await AuthService.GetUsuarioActualAsync();
            if (usuarioLogueado != null)
            {
                esAdministrador = usuarioLogueado.Rol.Equals("Administrador", StringComparison.OrdinalIgnoreCase);
                if (esAdministrador)
                {
                    plantas = await ApiService.ObtenerPlantasAsync() ?? new List<PlantaModel>();
                }
                else
                {
                    plantas = await ApiService.ObtenerPlantasPorUsuarioAsync(usuarioLogueado.IdUsuario) ?? new List<PlantaModel>();
                }

                if (plantas.Any()) plantaActual = plantas.First();
            }
        }
        catch (Exception ex) { Logger.LogError($"Error: {ex.Message}"); }
        finally { cargando = false; }
    }

    private void SeleccionarPlanta(PlantaModel planta) => plantaActual = planta;
    private void VolverAlDashboard() => Navigation.NavigateTo("/dashboard");
    private void IrAGestion() => Navigation.NavigateTo("/gestion-plantas");
}