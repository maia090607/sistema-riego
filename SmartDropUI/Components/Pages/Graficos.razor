@page "/graficos"
@using SmartDropUI.Services
@using SmartDropUI.Models
@using System.Timers
@inject ArduinoService ArduinoService
@inject ClimaService ClimaService
@inject HistorialRiegoService HistorialService
@inject NavigationManager Navigation
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Gráficos en Tiempo Real - SmartDrop</PageTitle>

<style>
    /* --- TEMA OSCURO --- */
    .graficos-page {
        min-height: 100vh;
        background-color: #05070a;
        padding: 2rem;
        font-family: 'Outfit', sans-serif;
        color: white;
        position: relative;
        overflow-x: hidden;
    }

    /* Luces de fondo */
    .glow-blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(90px);
        opacity: 0.3;
        z-index: 0;
        animation: floatColor 10s infinite ease-in-out;
    }

    .glow-1 {
        width: 500px;
        height: 500px;
        background: #00E676;
        top: -150px;
        left: -150px;
    }

    .glow-2 {
        width: 600px;
        height: 600px;
        background: #2979FF;
        bottom: -150px;
        right: -150px;
    }

    /* Botón Volver */
    .btn-back-menu {
        background: rgba(255, 255, 255, 0.05);
        color: #9ca3af;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
        position: relative;
        z-index: 10;
    }

        .btn-back-menu:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border-color: white;
            transform: translateX(-5px);
        }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 3rem;
        background: linear-gradient(90deg, #00E676, #2979FF);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        z-index: 10;
    }

    /* Grid de Gráficos */
    .charts-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
        position: relative;
        z-index: 10;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Tarjetas de Gráfico */
    .chart-card {
        background: #111827;
        border-radius: 24px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }

    .chart-title {
        color: white;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .chart-subtitle {
        color: #9ca3af;
        font-size: 0.8rem;
        margin-top: 5px;
    }

    /* Contenedor SVG */
    .chart-box {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 16px;
        padding: 20px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
        height: 250px;
        margin-bottom: 1.5rem;
    }

    /* Estilos SVG (Adaptados a Dark Mode) */
    .grid-line {
        stroke: rgba(255, 255, 255, 0.1);
        stroke-dasharray: 4;
    }

    .axis-text {
        font-size: 10px;
        fill: #6B7280;
        font-family: monospace;
    }

    .line-humedad {
        fill: none;
        stroke: #00E676; /* Verde Neón */
        stroke-width: 3;
        stroke-linecap: round;
        stroke-linejoin: round;
        filter: drop-shadow(0 0 8px rgba(0, 230, 118, 0.4));
    }

    .line-temp {
        fill: none;
        stroke: #FF9100; /* Naranja Neón */
        stroke-width: 3;
        stroke-linecap: round;
        stroke-linejoin: round;
        filter: drop-shadow(0 0 8px rgba(255, 145, 0, 0.4));
    }

    .dot {
        fill: #111827;
        stroke-width: 2;
        r: 4;
        transition: all 0.3s;
    }

    .dot-hum {
        stroke: #00E676;
    }

    .dot-temp {
        stroke: #FF9100;
    }

    /* Valor Destacado */
    .value-display {
        font-size: 2.5rem;
        font-weight: 900;
        text-align: center;
        padding: 1rem;
        border-radius: 16px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .val-green {
        color: #00E676;
    }

    .val-orange {
        color: #FF9100;
    }

    /* Detalles Clima */
    .weather-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        margin-top: 1rem;
    }

    .weather-badge {
        background: rgba(255, 255, 255, 0.05);
        padding: 0.8rem;
        border-radius: 12px;
        font-size: 0.9rem;
        color: #9ca3af;
        font-weight: 600;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    /* --- TABLA DE HISTORIAL --- */
    .history-section {
        background: #111827;
        border-radius: 24px;
        padding: 2.5rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
        z-index: 10;
        max-width: 1400px;
        margin: 0 auto;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        color: white;
        font-size: 1.2rem;
        font-weight: 700;
    }

    /* Nuevo estilo para el título de la sección con icono */
    .section-title-with-icon {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1.3rem;
        font-weight: 800;
        color: white;
    }

    .btn-refresh-table {
        background: rgba(41, 121, 255, 0.1);
        color: #2979FF;
        border: 1px solid rgba(41, 121, 255, 0.3);
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: 0.3s;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-refresh-table:hover {
            background: rgba(41, 121, 255, 0.2);
            color: white;
        }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px; /* Espacio entre filas */
    }

        .custom-table th {
            text-align: left;
            padding: 1rem;
            color: #6B7280;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .custom-table td {
            padding: 1.2rem;
            background: rgba(255, 255, 255, 0.02);
            color: white;
            font-weight: 500;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

            .custom-table td:first-child {
                border-top-left-radius: 12px;
                border-bottom-left-radius: 12px;
                border-left: 1px solid rgba(255, 255, 255, 0.05);
            }

            .custom-table td:last-child {
                border-top-right-radius: 12px;
                border-bottom-right-radius: 12px;
                border-right: 1px solid rgba(255, 255, 255, 0.05);
            }

    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .status-ok {
        background: rgba(0, 230, 118, 0.1);
        color: #00E676;
    }

    .status-bad {
        background: rgba(239, 68, 68, 0.1);
        color: #EF4444;
    }

    @@media (max-width: 1000px) {
        .charts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="graficos-page">
    <div class="glow-blob glow-1"></div>
    <div class="glow-blob glow-2"></div>

    <button class="btn-back-menu" @onclick='() => Navigation.NavigateTo("/dashboard")'>
        <span>⬅️</span> Volver al Dashboard
    </button>

    <h1 class="page-title">ANÁLISIS EN TIEMPO REAL</h1>

    <div class="charts-grid">

        <!-- GRÁFICO HUMEDAD -->
        <div class="chart-card">
            <div>
                <div class="chart-header">
                    <div>
                        <div class="chart-title" style="color: #00E676;">
                            <!-- ✅ ICONO NUEVO: PLANTA/HOJA (Estilo Outline) -->
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 22c4.97 0 9-4.03 9-9V7a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v6c0 4.97 4.03 9 9 9z"></path>
                                <path d="M12 22V7"></path>
                                <path d="M2 13h10"></path>
                            </svg>
                            Humedad del Suelo
                        </div>
                        <div class="chart-subtitle">Sensor Arduino en Vivo</div>
                    </div>
                </div>

                <div class="chart-box">
                    <svg width="100%" height="100%" viewBox="0 0 500 250" preserveAspectRatio="none">
                        <!-- Grid Lines -->
                        @for (int i = 0; i <= 5; i++)
                        {
                            <line x1="40" y1="@(i * 40 + 25)" x2="490" y2="@(i * 40 + 25)" class="grid-line" />
                            <g><text x="5" y="@(i * 40 + 30)" class="axis-text">@(100 - i * 20)%</text></g>
                        }
                        <!-- Linea Datos -->
                        <path d="@pathHumedad" class="line-humedad" />
                        <!-- Puntos -->
                        @foreach (var p in puntosHumedad)
                        {
                            <circle cx="@p.X" cy="@p.Y" class="dot dot-hum" />
                        }
                    </svg>
                </div>
            </div>
            <div class="value-display val-green">@ultimaHumedad.ToString("0.0") %</div>
        </div>

        <!-- GRÁFICO TEMPERATURA -->
        <div class="chart-card">
            <div>
                <div class="chart-header">
                    <div>
                        <div class="chart-title" style="color: #FF9100;">
                            <!-- ✅ ICONO NUEVO: SOL Y NUBE (Clima) -->
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 2v2"></path>
                                <path d="m4.93 4.93 1.41 1.41"></path>
                                <path d="M20 12h2"></path>
                                <path d="m19.07 4.93-1.41 1.41"></path>
                                <path d="M15.97 15.97A4 4 0 1 0 10.5 10.5"></path>
                                <path d="M16 20a4 4 0 1 1 0-8"></path>
                            </svg>
                            Clima Ambiental
                        </div>
                        <div class="chart-subtitle">Datos API OpenWeatherMap</div>
                    </div>
                </div>

                <div class="chart-box">
                    <svg width="100%" height="100%" viewBox="0 0 500 250" preserveAspectRatio="none">
                        @for (int i = 0; i <= 5; i++)
                        {
                            <line x1="40" y1="@(i * 40 + 25)" x2="490" y2="@(i * 40 + 25)" class="grid-line" />
                            <g><text x="5" y="@(i * 40 + 30)" class="axis-text">@(50 - i * 10)°C</text></g>
                        }
                        <path d="@pathTemperatura" class="line-temp" />
                        @foreach (var p in puntosTemperatura)
                        {
                            <circle cx="@p.X" cy="@p.Y" class="dot dot-temp" />
                        }
                    </svg>
                </div>
            </div>
            <div>
                <div class="value-display val-orange">@ultimaTemperatura.ToString("0.0") °C</div>
                <div class="weather-details">
                    <div class="weather-badge">💧 Hum: @humedadAire%</div>
                    <div class="weather-badge">💨 Viento: @viento km/h</div>
                </div>
            </div>
        </div>
    </div>

    <!-- TABLA HISTORIAL -->
    <div class="history-section">
        <div class="section-header">
            <div class="section-title-with-icon">
                <!-- ✅ ICONO NUEVO: HISTORIAL/RELOJ -->
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#2979FF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 3v5h5"></path>
                    <path d="M3.05 13A9 9 0 1 0 6 5.3L3 8"></path>
                    <path d="M12 7v5l4 2"></path>
                </svg>
                Últimos 5 Riegos Registrados
            </div>
            <button class="btn-refresh-table" @onclick="CargarHistorial">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21.5 2v6h-6M2.5 22v-6h6M2 11.5a10 10 0 0 1 18.8-4.3M22 12.5a10 10 0 0 1-18.8 4.3" /></svg>
                Actualizar
            </button>
        </div>

        <div style="overflow-x:auto;">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Fecha y Hora</th>
                        <th>Humedad Suelo</th>
                        <th>Temperatura</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (historialReciente.Any())
                    {
                        @foreach (var item in historialReciente)
                        {
                            <tr>
                                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td style="color:#00E676; font-weight:bold;">@item.Humedad %</td>
                                <td style="color:#FF9100; font-weight:bold;">@item.Temperatura °C</td>
                                <td>
                                    @if (item.Humedad < 30)
                                    {
                                        <span class="status-badge status-bad">Seco</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-ok">Óptimo</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4" style="text-align:center; color:#94a3b8;">No hay datos recientes...</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private const int MAX_PUNTOS = 20;
    private Timer? _timer;
    private Queue<double> colaHumedad = new();
    private Queue<double> colaTemp = new();
    private string pathHumedad = "";
    private string pathTemperatura = "";
    private List<(double X, double Y)> puntosHumedad = new();
    private List<(double X, double Y)> puntosTemperatura = new();
    private double ultimaHumedad = 0;
    private double ultimaTemperatura = 0;
    private double humedadAire = 0;
    private double viento = 0;
    private List<HistorialRiegoModel> historialReciente = new();

    protected override async Task OnInitializedAsync()
    {
        for (int i = 0; i < MAX_PUNTOS; i++) { colaHumedad.Enqueue(0); colaTemp.Enqueue(0); }
        await CargarHistorial();
        _timer = new Timer(2000);
        _timer.Elapsed += async (s, e) => await ActualizarDatos();
        _timer.AutoReset = true;
        _timer.Start();
    }

    private async Task CargarHistorial()
    {
        try
        {
            var todos = await HistorialService.ObtenerHistorialAsync();
            historialReciente = todos.OrderByDescending(h => h.Fecha).Take(5).ToList();
            await InvokeAsync(StateHasChanged);
        }
        catch { }
    }

    private async Task ActualizarDatos()
    {
        try
        {
            var estado = await ArduinoService.ObtenerEstadoAsync();
            ultimaHumedad = estado != null ? estado.Humedad : 0;
        }
        catch { ultimaHumedad = 0; }

        try
        {
            var clima = await ClimaService.ObtenerClimaActualAsync();
            if (clima != null)
            {
                ultimaTemperatura = clima.Temperatura;
                humedadAire = clima.Humedad;
                viento = clima.VelocidadViento;
            }
        }
        catch { }

        colaHumedad.Enqueue(ultimaHumedad);
        if (colaHumedad.Count > MAX_PUNTOS) colaHumedad.Dequeue();

        colaTemp.Enqueue(ultimaTemperatura);
        if (colaTemp.Count > MAX_PUNTOS) colaTemp.Dequeue();

        CalcularGraficas();
        await InvokeAsync(StateHasChanged);
    }

    private void CalcularGraficas()
    {
        double ancho = 450, alto = 200, margenX = 40, margenY = 25;
        double pasoX = ancho / (MAX_PUNTOS - 1);

        // Humedad
        var listaHum = colaHumedad.ToList();
        var sbHum = new System.Text.StringBuilder();
        puntosHumedad.Clear();
        for (int i = 0; i < listaHum.Count; i++)
        {
            double x = margenX + (i * pasoX);
            double y = (margenY + alto) - (listaHum[i] * (alto / 100.0));
            puntosHumedad.Add((x, y));
            sbHum.Append(i == 0 ? $"M {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}" : $" L {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}");
        }
        pathHumedad = sbHum.ToString();

        // Temperatura
        var listaTemp = colaTemp.ToList();
        var sbTemp = new System.Text.StringBuilder();
        puntosTemperatura.Clear();
        for (int i = 0; i < listaTemp.Count; i++)
        {
            double x = margenX + (i * pasoX);
            double val = Math.Max(0, Math.Min(50, listaTemp[i]));
            double y = (margenY + alto) - (val * (alto / 50.0));
            puntosTemperatura.Add((x, y));
            sbTemp.Append(i == 0 ? $"M {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}" : $" L {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}");
        }
        pathTemperatura = sbTemp.ToString();
    }

    public void Dispose()
    {
        _timer?.Stop();
        _timer?.Dispose();
    }
}