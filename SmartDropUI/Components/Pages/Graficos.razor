<div class="graficos-page">
    <div class="graficos-container">
        <button class="btn-back-menu" @onclick="VolverDashboard">
            <span>⬅️</span>
            Volver al Dashboard
        </button>

        <h1 class="page-title">Análisis y Estadísticas del Sistema</h1>

        <!-- Gráficas -->
        <div class="charts-grid">
            <!-- Gráfica de Humedad del Suelo -->
            <div class="chart-card">
                <div class="chart-header">
                    <h2 class="chart-title">Humedad del Suelo en Tiempo Real</h2>
                    <p class="chart-subtitle">Monitoreo continuo del nivel de humedad</p>
                </div>
                <div class="chart-container">
                    @if (cargandoHumedad)
                    {
                        <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem;">
                            <div class="loading-spinner"></div>
                            <span style="color: #10b981; font-weight: 600;">Cargando datos...</span>
                        </div>
                    }
                    else
                    {
                        <svg viewBox="0 0 400 220" class="chart-svg">
                            <!-- Líneas de cuadrícula -->
                            @for (int i = 0; i <= 4; i++)
                            {
                                var y = 30 + (i * 42.5);
                                <line x1="50" y1="@y" x2="370" y2="@y" class="chart-grid" />
                            }

                            <!-- Ejes -->
                            <line x1="50" y1="200" x2="370" y2="200" class="chart-axis" />
                            <line x1="50" y1="30" x2="50" y2="200" class="chart-axis" />

                            <!-- Etiquetas Y -->
                            <text x="20" y="35" class="chart-label">100</text>
                            <text x="25" y="77" class="chart-label">75</text>
                            <text x="25" y="120" class="chart-label">50</text>
                            <text x="25" y="162" class="chart-label">25</text>
                            <text x="30" y="205" class="chart-label">0</text>

                            <!-- Línea de humedad -->
                            <path d="@pathHumedad" class="line-chart-humedad" />

                            <!-- Puntos de datos -->
                            @for (int i = 0; i < puntosHumedad.Count; i++)
                            {
                                var punto = puntosHumedad[i];
                                <circle cx="@punto.X" cy="@punto.Y" r="4"
                                        class="data-point data-point-humedad" />
                            }
                        </svg>
                    }
                </div>
                <div class="current-value" style="color: #10b981;">
                    Valor Actual: @valorActualHumedad.ToString("F1")%
                </div>
                <div class="update-time">
                    Última actualización: @ultimaActualizacionHumedad.ToString("HH:mm:ss")
                </div>
            </div>

            <!-- Gráfica de Temperatura -->
            <div class="chart-card">
                <div class="chart-header">
                    <h2 class="chart-title">Temperatura del Ambiente en Tiempo Real</h2>
                    <p class="chart-subtitle">Monitoreo continuo de la temperatura</p>
                </div>
                <div class="chart-container">
                    @if (cargandoTemperatura)
                    {
                        <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem;">
                            <div class="loading-spinner"></div>
                            <span style="color: #ef4444; font-weight: 600;">Cargando datos...</span>
                        </div>
                    }
                    else
                    {
                        <svg viewBox="0 0 400 220" class="chart-svg">
                            <!-- Líneas de cuadrícula -->
                            @for (int i = 0; i <= 4; i++)
                            {
                                var y = 30 + (i * 42.5);
                                <line x1="50" y1="@y" x2="370" y2="@y" class="chart-grid" />
                            }

                            <!-- Ejes -->
                            <line x1="50" y1="200" x2="370" y2="200" class="chart-axis" />
                            <line x1="50" y1="30" x2="50" y2="200" class="chart-axis" />

                            <!-- Etiquetas Y -->
                            <text x="20" y="35" class="chart-label">40</text>
                            <text x="20" y="77" class="chart-label">35</text>
                            <text x="20" y="120" class="chart-label">30</text>
                            <text x="20" y="162" class="chart-label">25</text>
                            <text x="20" y="205" class="chart-label">20</text>

                            <!-- Línea de temperatura -->
                            <path d="@pathTemperatura" class="line-chart-temp" />

                            <!-- Puntos de datos -->
                            @for (int i = 0; i < puntosTemperatura.Count; i++)
                            {
                                var punto = puntosTemperatura[i];
                                <circle cx="@punto.X" cy="@punto.Y" r="4"
                                        class="data-point data-point-temp" />
                            }
                        </svg>
                    }
                </div>
                <div class="current-value" style="color: #ef4444;">
                    Valor Actual: @valorActualTemperatura.ToString("F1")°C
                </div>
                <div class="update-time">
                    Última actualización: @ultimaActualizacionTemperatura.ToString("HH:mm:ss")
                </div>
            </div>
        </div>

        <!-- Historial de Riego -->
        <div class="historial-section">
            <div class="historial-header">
                <h3 class="historial-title">Historial de Riego</h3>
                <p class="historial-subtitle">Registros históricos del sistema con temperatura ambiente</p>
            </div>
            @if (cargando)
            {
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    <div class="loading-text">Cargando datos históricos...</div>
                </div>
            }
            else if (historialDatos.Any())
            {
                <table class="historial-table">
                    <thead>
                        <tr>
                            <th>Fecha y Hora</th>
                            <th>Humedad del Suelo (%)</th>
                            <th>Temperatura Ambiente (°C)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dato in historialDatos.Take(10))
                        {
                            <tr>
                                <td>@dato.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>
                                    <span class="badge @ObtenerClaseHumedad(dato.Humedad)">
                                        @dato.Humedad.ToString("F1")%
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @ObtenerClaseTemperatura(dato.Temperatura)">
                                        @dato.Temperatura.ToString("F1")°C
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="loading-container">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">📋</div>
                    <div class="loading-text">No hay datos históricos disponibles</div>
                </div>
            }
        </div>

        <!-- Controles del Sistema -->
        <div class="controls-section">
            <h3 class="controls-title">Controles del Sistema</h3>
            <div class="controls-grid">
                <button class="btn-control btn-reload" @onclick="RecargarHistorial">
                    <span>🔄</span> RECARGAR HISTORIAL
                </button>
                <button class="btn-control btn-manual" @onclick="IrARiego">
                    <span>💧</span> INICIAR RIEGO MANUAL
                </button>
            </div>
            <div class="search-section">
                <h4 class="search-title">Buscar por Fecha</h4>
                <input type="date" class="date-input" @bind="fechaBusqueda" />
                <button class="btn-control btn-search" @onclick="BuscarPorFecha">
                    <span>🔍</span> BUSCAR
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private bool cargando = false;
    private bool cargandoHumedad = false;
    private bool cargandoTemperatura = false;
    private DateTime fechaBusqueda = DateTime.Now;
    private DateTime ultimaActualizacionHumedad = DateTime.Now;
    private DateTime ultimaActualizacionTemperatura = DateTime.Now;
    private List<HistorialRiegoModel> historialDatos = new();
    private double valorActualHumedad = 50;
    private double valorActualTemperatura = 30;

    // Listas para almacenar los puntos de la gráfica
    private List<(double X, double Y)> puntosHumedad = new();
    private List<(double X, double Y)> puntosTemperatura = new();

    private Queue<double> historialHumedad = new Queue<double>();
    private Queue<double> historialTemperatura = new Queue<double>();
    private const int MAX_PUNTOS = 20; // Aumentado para mejor visualización

    private System.Timers.Timer? timerHumedad;
    private System.Timers.Timer? timerTemperatura;
    private string pathHumedad = "";
    private string pathTemperatura = "";

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("🚀 [GRÁFICOS] Iniciando componente...");
        ArduinoService.DatosRecibidos += OnDatosArduinoRecibidos;
        await CargarDatosIniciales();

        // Timer para humedad (cada 2 segundos)
        timerHumedad = new System.Timers.Timer(2000);
        timerHumedad.Elapsed += async (sender, e) => await ActualizarHumedadAsync();
        timerHumedad.AutoReset = true;
        timerHumedad.Start();

        // Timer para temperatura (cada 10 segundos)
        timerTemperatura = new System.Timers.Timer(10000);
        timerTemperatura.Elapsed += async (sender, e) => await ActualizarTemperaturaAsync();
        timerTemperatura.AutoReset = true;
        timerTemperatura.Start();

        Console.WriteLine("✅ [GRÁFICOS] Timers iniciados");
    }

    private void OnDatosArduinoRecibidos(DatosArduinoModel datos)
    {
        try
        {
            var nuevaHumedad = Math.Max(0, Math.Min(100, datos.Humedad));
            if (Math.Abs(valorActualHumedad - nuevaHumedad) > 0.1)
            {
                valorActualHumedad = nuevaHumedad;
                AgregarPuntoHumedad(valorActualHumedad);
                ultimaActualizacionHumedad = DateTime.Now;
                Console.WriteLine($"📊 [GRÁFICOS] Humedad actualizada: {valorActualHumedad:F1}%");
                InvokeAsync(StateHasChanged);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [GRÁFICOS] Error: {ex.Message}");
        }
    }

    private async Task ActualizarHumedadAsync()
    {
        try
        {
            var estado = await ArduinoService.ObtenerEstadoAsync();
            if (estado != null)
            {
                var nuevaHumedad = Math.Max(0, Math.Min(100, estado.Humedad));
                if (Math.Abs(valorActualHumedad - nuevaHumedad) > 0.1)
                {
                    valorActualHumedad = nuevaHumedad;
                    AgregarPuntoHumedad(valorActualHumedad);
                    ultimaActualizacionHumedad = DateTime.Now;
                    await InvokeAsync(StateHasChanged);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [GRÁFICOS] Error humedad: {ex.Message}");
        }
    }

    private async Task ActualizarTemperaturaAsync()
    {
        try
        {
            var clima = await ClimaService.ObtenerClimaActualAsync();
            if (clima != null)
            {
                var nuevaTemp = Math.Max(20, Math.Min(40, clima.Temperatura));
                if (Math.Abs(valorActualTemperatura - nuevaTemp) > 0.1)
                {
                    valorActualTemperatura = nuevaTemp;
                    AgregarPuntoTemperatura(valorActualTemperatura);
                    ultimaActualizacionTemperatura = DateTime.Now;
                    await InvokeAsync(StateHasChanged);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [GRÁFICOS] Error temperatura: {ex.Message}");
        }
    }

    private void AgregarPuntoHumedad(double valor)
    {
        historialHumedad.Enqueue(valor);
        if (historialHumedad.Count > MAX_PUNTOS)
            historialHumedad.Dequeue();
        GenerarCurvaHumedad();
    }

    private void AgregarPuntoTemperatura(double valor)
    {
        historialTemperatura.Enqueue(valor);
        if (historialTemperatura.Count > MAX_PUNTOS)
            historialTemperatura.Dequeue();
        GenerarCurvaTemperatura();
    }

    private void GenerarCurvaHumedad()
    {
        if (historialHumedad.Count < 2)
        {
            pathHumedad = "";
            puntosHumedad.Clear();
            return;
        }

        var puntos = historialHumedad.ToList();
        var path = new System.Text.StringBuilder();
        puntosHumedad.Clear();

        double anchoTotal = 320;
        double espaciado = anchoTotal / (MAX_PUNTOS - 1);

        for (int i = 0; i < puntos.Count; i++)
        {
            double x = 50 + (i * espaciado);
            double y = 200 - (puntos[i] * 170 / 100.0);

            puntosHumedad.Add((x, y));

            if (i == 0)
            {
                path.Append($"M {x:F2} {y:F2}");
            }
            else
            {
                path.Append($" L {x:F2} {y:F2}");
            }
        }

        pathHumedad = path.ToString();
    }

    private void GenerarCurvaTemperatura()
    {
        if (historialTemperatura.Count < 2)
        {
            pathTemperatura = "";
            puntosTemperatura.Clear();
            return;
        }

        var puntos = historialTemperatura.ToList();
        var path = new System.Text.StringBuilder();
        puntosTemperatura.Clear();

        double anchoTotal = 320;
        double espaciado = anchoTotal / (MAX_PUNTOS - 1);

        for (int i = 0; i < puntos.Count; i++)
        {
            double x = 50 + (i * espaciado);
            double valorNormalizado = (puntos[i] - 20) / 20.0;
            double y = 200 - (valorNormalizado * 170);

            puntosTemperatura.Add((x, y));

            if (i == 0)
            {
                path.Append($"M {x:F2} {y:F2}");
            }
            else
            {
                path.Append($" L {x:F2} {y:F2}");
            }
        }

        pathTemperatura = path.ToString();
    }

    private async Task CargarDatosIniciales()
    {
        cargando = true;
        cargandoHumedad = true;
        cargandoTemperatura = true;

        try
        {
            Console.WriteLine("📥 [GRÁFICOS] Cargando datos iniciales...");

            // Obtener humedad del Arduino
            var estado = await ArduinoService.ObtenerEstadoAsync();
            if (estado != null)
            {
                valorActualHumedad = Math.Max(0, Math.Min(100, estado.Humedad));
                for (int i = 0; i < 10; i++)
                {
                    AgregarPuntoHumedad(valorActualHumedad + (Random.Shared.NextDouble() - 0.5) * 5);
                }
                Console.WriteLine($"✅ Humedad inicial: {valorActualHumedad:F1}%");
            }

            // Obtener temperatura del clima
            var clima = await ClimaService.ObtenerClimaActualAsync();
            if (clima != null)
            {
                valorActualTemperatura = Math.Max(20, Math.Min(40, clima.Temperatura));
                for (int i = 0; i < 10; i++)
                {
                    AgregarPuntoTemperatura(valorActualTemperatura + (Random.Shared.NextDouble() - 0.5) * 2);
                }
                Console.WriteLine($"✅ Temperatura inicial: {valorActualTemperatura:F1}°C");
            }

            await CargarHistorialReciente();
            Console.WriteLine($"✅ [GRÁFICOS] Datos iniciales cargados");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ [GRÁFICOS] Error: {ex.Message}");
        }
        finally
        {
            cargando = false;
            cargandoHumedad = false;
            cargandoTemperatura = false;
        }
    }

