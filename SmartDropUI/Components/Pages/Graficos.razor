    private string ObtenerClaseHumedad(float humedad)
    {
        if (humedad < 30) return "badge-danger";
        if (humedad < 60) return "badge-warning";
        return "badge-success";
    }

    private string ObtenerClaseTemperatura(float temperatura)
    {
        if (temperatura < 15 || temperatura > 35) return "badge-danger";
        if (temperatura < 18 || temperatura > 30) return "badge-warning";
        return "badge-success";
    }

