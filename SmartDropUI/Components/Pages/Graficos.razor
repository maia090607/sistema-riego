@page "/graficos"
@using SmartDropUI.Services
@using SmartDropUI.Models
@using System.Timers
@inject ArduinoService ArduinoService
@inject ClimaService ClimaService
@inject HistorialRiegoService HistorialService
@inject NavigationManager Navigation
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Gráficos en Tiempo Real</PageTitle>

<style>
    .graficos-container {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
        font-family: 'Segoe UI', sans-serif;
    }

    .btn-back {
        background: #10b981;
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 700;
        cursor: pointer;
        margin-bottom: 2rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #059669;
            transform: translateY(-2px);
        }

    .charts-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .chart-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .chart-title {
        color: #10b981;
        font-weight: 800;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
    }

    .chart-subtitle {
        color: #6b7280;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        font-style: italic;
    }

    .chart-box {
        background: #f8fafc;
        border-radius: 15px;
        padding: 20px;
        border: 1px solid #e2e8f0;
        position: relative;
        height: 250px;
        margin-bottom: 1rem;
    }

    .line-humedad {
        fill: none;
        stroke: #10b981;
        stroke-width: 3;
        stroke-linecap: round;
        stroke-linejoin: round;
        filter: drop-shadow(0 4px 6px rgba(16, 185, 129, 0.2));
    }

    .line-temp {
        fill: none;
        stroke: #ef4444;
        stroke-width: 3;
        stroke-linecap: round;
        stroke-linejoin: round;
        filter: drop-shadow(0 4px 6px rgba(239, 68, 68, 0.2));
    }

    .dot {
        fill: white;
        stroke-width: 2;
        r: 4;
        transition: all 0.3s;
    }

    .dot-hum {
        stroke: #10b981;
    }

    .dot-temp {
        stroke: #ef4444;
    }

    .grid-line {
        stroke: #e2e8f0;
        stroke-dasharray: 4;
    }

    .axis-text {
        font-size: 10px;
        fill: #94a3b8;
        font-family: monospace;
    }

    .value-display {
        font-size: 1.8rem;
        font-weight: 900;
        padding: 1rem;
        border-radius: 15px;
        background: #f0fdf4;
        color: #10b981;
        border: 1px solid #bbf7d0;
    }

    .value-temp {
        background: #fef2f2;
        color: #ef4444;
        border-color: #fecaca;
    }

    .weather-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        margin-top: 1rem;
    }

    .weather-badge {
        background: #f1f5f9;
        padding: 0.5rem;
        border-radius: 10px;
        font-size: 0.9rem;
        color: #475569;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

    .history-section {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    /* Header con Botón */
    .section-header {
        font-size: 1.2rem;
        font-weight: 800;
        color: #334155;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .btn-refresh-table {
        background: #3b82f6;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: 0.2s;
        display: flex;
        align-items: center;
        gap: 5px;
    }

        .btn-refresh-table:hover {
            background: #2563eb;
            transform: translateY(-2px);
        }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table th {
            text-align: left;
            padding: 1rem;
            background: #f8fafc;
            color: #64748b;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            border-bottom: 2px solid #e2e8f0;
        }

        .custom-table td {
            padding: 1rem;
            border-bottom: 1px solid #f1f5f9;
            color: #334155;
            font-weight: 500;
        }

    .status-dot {
        height: 10px;
        width: 10px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 5px;
    }

    @@media (max-width: 1000px) {
        .charts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="graficos-container">
    <button class="btn-back" @onclick='() => Navigation.NavigateTo("/dashboard")'><span>⬅</span> Volver</button>

    <h1 style="text-align:center; color:#10b981; font-weight:900; margin-bottom:3rem;">ANÁLISIS EN TIEMPO REAL</h1>

    <div class="charts-grid">
        <div class="chart-card">
            <div>
                <div class="chart-title">Humedad del Suelo</div>
                <div class="chart-subtitle">Sensor Arduino en Vivo</div>
                <div class="chart-box">
                    <svg width="100%" height="100%" viewBox="0 0 500 250" preserveAspectRatio="none">
                        @for (int i = 0; i <= 5; i++)
                        {
                            <line x1="40" y1="@(i * 40 + 25)" x2="490" y2="@(i * 40 + 25)" class="grid-line" />
                            <g><text x="5" y="@(i * 40 + 30)" class="axis-text">@(100 - i * 20)%</text></g>
                        }
                        <path d="@pathHumedad" class="line-humedad" />
                        @foreach (var p in puntosHumedad)
                        {
                            <circle cx="@p.X" cy="@p.Y" class="dot dot-hum" />
                        }
                    </svg>
                </div>
            </div>
            <div class="value-display">@ultimaHumedad.ToString("0.0") %</div>
        </div>

        <div class="chart-card">
            <div>
                <div class="chart-title" style="color:#ef4444;">Clima Ambiental</div>
                <div class="chart-subtitle">Datos API OpenWeatherMap</div>
                <div class="chart-box">
                    <svg width="100%" height="100%" viewBox="0 0 500 250" preserveAspectRatio="none">
                        @for (int i = 0; i <= 5; i++)
                        {
                            <line x1="40" y1="@(i * 40 + 25)" x2="490" y2="@(i * 40 + 25)" class="grid-line" />
                            <g><text x="5" y="@(i * 40 + 30)" class="axis-text">@(50 - i * 10)°C</text></g>
                        }
                        <path d="@pathTemperatura" class="line-temp" />
                        @foreach (var p in puntosTemperatura)
                        {
                            <circle cx="@p.X" cy="@p.Y" class="dot dot-temp" />
                        }
                    </svg>
                </div>
            </div>
            <div>
                <div class="value-display value-temp">@ultimaTemperatura.ToString("0.0") °C</div>
                <div class="weather-details">
                    <div class="weather-badge">💧 Hum: @humedadAire%</div>
                    <div class="weather-badge">💨 Viento: @viento km/h</div>
                </div>
            </div>
        </div>
    </div>

    <div class="history-section">
        <div class="section-header">
            <div>
                <span>📋</span> Últimos 5 Riegos Registrados
            </div>
            <button class="btn-refresh-table" @onclick="CargarHistorial">
                <span>🔄</span> Actualizar Tabla
            </button>
        </div>

        <div style="overflow-x:auto;">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Fecha y Hora</th>
                        <th>Humedad Suelo</th>
                        <th>Temperatura</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (historialReciente.Any())
                    {
                        @foreach (var item in historialReciente)
                        {
                            <tr>
                                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td style="color:#10b981; font-weight:bold;">@item.Humedad %</td>
                                <td style="color:#ef4444; font-weight:bold;">@item.Temperatura °C</td>
                                <td>
                                    @if (item.Humedad < 30)
                                    {
                                        <span style="color:#ef4444;">Seco</span>
                                    }
                                    else
                                    {

                                        <span style="color:#10b981;">Óptimo</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4" style="text-align:center; color:#94a3b8;">No hay datos recientes...</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private const int MAX_PUNTOS = 20;
    private Timer? _timer;
    private Queue<double> colaHumedad = new();
    private Queue<double> colaTemp = new();
    private string pathHumedad = "";
    private string pathTemperatura = "";
    private List<(double X, double Y)> puntosHumedad = new();
    private List<(double X, double Y)> puntosTemperatura = new();
    private double ultimaHumedad = 0;
    private double ultimaTemperatura = 0;
    private double humedadAire = 0;
    private double viento = 0;
    private List<HistorialRiegoModel> historialReciente = new();

    protected override async Task OnInitializedAsync()
    {
        for (int i = 0; i < MAX_PUNTOS; i++) { colaHumedad.Enqueue(0); colaTemp.Enqueue(0); }
        await CargarHistorial();
        _timer = new Timer(2000);
        _timer.Elapsed += async (s, e) => await ActualizarDatos();
        _timer.AutoReset = true;
        _timer.Start();
    }

    // ✅ Método que llama el botón
    private async Task CargarHistorial()
    {
        try
        {
            var todos = await HistorialService.ObtenerHistorialAsync();
            historialReciente = todos.OrderByDescending(h => h.Fecha).Take(5).ToList();
            await InvokeAsync(StateHasChanged);
        }
        catch { }
    }

    private async Task ActualizarDatos()
    {
        try
        {
            var estado = await ArduinoService.ObtenerEstadoAsync();
            ultimaHumedad = estado != null ? estado.Humedad : 0;
        }
        catch { ultimaHumedad = 0; }

        try
        {
            var clima = await ClimaService.ObtenerClimaActualAsync();
            if (clima != null)
            {
                ultimaTemperatura = clima.Temperatura;
                humedadAire = clima.Humedad;
                viento = clima.VelocidadViento;
            }
        }
        catch { }

        colaHumedad.Enqueue(ultimaHumedad);
        if (colaHumedad.Count > MAX_PUNTOS) colaHumedad.Dequeue();

        colaTemp.Enqueue(ultimaTemperatura);
        if (colaTemp.Count > MAX_PUNTOS) colaTemp.Dequeue();

        CalcularGraficas();
        await InvokeAsync(StateHasChanged);
    }

    private void CalcularGraficas()
    {
        double ancho = 450, alto = 200, margenX = 40, margenY = 25;
        double pasoX = ancho / (MAX_PUNTOS - 1);

        // Humedad
        var listaHum = colaHumedad.ToList();
        var sbHum = new System.Text.StringBuilder();
        puntosHumedad.Clear();
        for (int i = 0; i < listaHum.Count; i++)
        {
            double x = margenX + (i * pasoX);
            double y = (margenY + alto) - (listaHum[i] * (alto / 100.0));
            puntosHumedad.Add((x, y));
            sbHum.Append(i == 0 ? $"M {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}" : $" L {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}");
        }
        pathHumedad = sbHum.ToString();

        // Temperatura
        var listaTemp = colaTemp.ToList();
        var sbTemp = new System.Text.StringBuilder();
        puntosTemperatura.Clear();
        for (int i = 0; i < listaTemp.Count; i++)
        {
            double x = margenX + (i * pasoX);
            double val = Math.Max(0, Math.Min(50, listaTemp[i]));
            double y = (margenY + alto) - (val * (alto / 50.0));
            puntosTemperatura.Add((x, y));
            sbTemp.Append(i == 0 ? $"M {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}" : $" L {x.ToString(System.Globalization.CultureInfo.InvariantCulture)} {y.ToString(System.Globalization.CultureInfo.InvariantCulture)}");
        }
        pathTemperatura = sbTemp.ToString();
    }

    public void Dispose()
    {
        _timer?.Stop();
        _timer?.Dispose();
    }
}